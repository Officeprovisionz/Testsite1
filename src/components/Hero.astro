---
import { siteConfig } from '@/data/siteConfig';

const telHref = `tel:${siteConfig.contact.phoneE164}`;
const smsHref = `sms:${siteConfig.contact.phoneE164}?&body=${encodeURIComponent(siteConfig.contact.smsBody)}`;

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
---

<section class="section relative overflow-hidden">
  <div aria-hidden="true" class="pointer-events-none absolute inset-0">
    <div class="absolute -left-28 -top-32 h-80 w-80 rounded-full bg-brand-200/35 blur-3xl"></div>
    <div class="absolute -right-28 top-16 h-80 w-80 rounded-full bg-brand-300/25 blur-3xl"></div>
  </div>

  <div class="container-page relative grid gap-10 lg:grid-cols-2 lg:items-center">
    <div>
      <div class="flex flex-wrap gap-2">
        <span class="pill">Commercial-grade</span>
        <span class="pill">Checklist-driven</span>
        <span class="pill">Flexible scheduling</span>
      </div>
      <h1
        class="mt-5 text-balance font-serif text-5xl font-bold tracking-tight text-slate-900 sm:text-6xl"
      >
        A cleaner office—
        <span class="text-brand-600">with supplies and facilities support</span>.
      </h1>
      <p class="mt-6 max-w-prose text-pretty text-lg leading-relaxed text-slate-600">
        {siteConfig.brand.tagline} Serving <span class="font-semibold text-slate-900"
          >{siteConfig.brand.city}</span
        >.
      </p>

      <div class="mt-6 flex flex-col gap-3 sm:flex-row">
        <a class="btn-primary" href={telHref}>Call/Text {siteConfig.contact.phoneDisplay}</a>
        <a class="btn-secondary" href={href('contact/')}>Get a Quote</a>
        <a class="btn-secondary" href={smsHref}>Text</a>
      </div>

      <div class="mt-8 rounded-2xl border border-slate-200 bg-slate-50 p-5">
        <p class="text-sm font-semibold text-slate-900">Standard visit includes</p>
        <ul class="mt-3 grid gap-2 text-sm text-slate-700 sm:grid-cols-2">
          {
            siteConfig.whatIncluded.map((item) => (
              <li class="flex gap-2">
                <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true" />
                <span>{item}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="card card-hover overflow-hidden">
      <div class="bg-gradient-to-br from-brand-50 to-white p-7 sm:p-9">
        <p class="text-sm font-semibold text-brand-800">Trusted service</p>
        <div class="mt-2 flex items-center gap-2" aria-label="Five-star care">
          <span class="text-amber-500" aria-hidden="true">★★★★★</span>
          <span class="text-sm text-slate-700">
            Clear communication, consistent checklists, and results you can count on.
          </span>
        </div>
        <p class="mt-4 text-sm text-slate-600">
          Ask for our current checklist and recent references during your quote.
        </p>

        <div class="mt-6 grid gap-3 sm:grid-cols-2">
          <div class="rounded-xl border border-slate-200 bg-white p-4">
            <p class="text-sm font-semibold text-slate-900">Fast quotes</p>
            <p class="mt-1 text-sm text-slate-700">
              Tell us your space and schedule. We’ll respond quickly.
            </p>
          </div>
          <div class="rounded-xl border border-slate-200 bg-white p-4">
            <p class="text-sm font-semibold text-slate-900">No surprises</p>
            <p class="mt-1 text-sm text-slate-700">
              We confirm scope and a clear quote before the job.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
