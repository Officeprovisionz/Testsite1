---
import Scope from '@/components/Scope.astro';

type Props = {
  id?: string;
  heading?: string;
  description?: string;
  ctaHref?: string;
  ctaLabel?: string;
};

const {
  id,
  heading = 'Scope & service levels',
  description,
  ctaHref,
  ctaLabel = 'Request a quote',
} = Astro.props;
---

<Scope
  {...id ? { id } : {}}
  heading={heading}
  description={description}
  ctaHref={ctaHref}
  ctaLabel={ctaLabel}
/>
