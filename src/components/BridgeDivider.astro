---
type Props = {
  class?: string;
};

const { class: className } = Astro.props;
---

<div class:list={['pointer-events-none py-6 md:py-8', className]} aria-hidden="true">
  <div class="container-page">
    <div class="text-brand-400/55 dark:text-brand-300/45">
      <svg
        width="100%"
        height="60"
        viewBox="0 0 1000 60"
        preserveAspectRatio="none"
        role="presentation"
        class="opacity-90"
      >
        <!-- Main suspension cables (double arc) -->
        <path
          d="M0 10 Q 500 60 1000 10"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          class="text-brand-500/80"></path>

        <!-- Secondary cable for depth -->
        <path
          d="M0 15 Q 500 65 1000 15"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          class="text-brand-400/50"></path>

        <!-- Vertical hangers (dense and varying) -->
        <g stroke="currentColor" stroke-width="0.5" class="text-brand-300/40">
          {
            Array.from({ length: 50 }).map((_, i) => {
              const x = 20 + i * 19.6;
              // Parabolic curve approximation: y = a(x-h)^2 + k
              // Vertex at (500, 60) roughly.
              // Let's approximate the yStart on the curve.
              const yCurve = 10 + 50 * Math.pow((x - 500) / 500, 2);
              return <line x1={x} y1={yCurve} x2={x} y2={60} />;
            })
          }
        </g>

        <!-- Road deck -->
        <line
          x1="0"
          y1="58"
          x2="1000"
          y2="58"
          stroke="currentColor"
          stroke-width="2"
          class="text-brand-500/30"></line>
      </svg>
    </div>
  </div>
</div>
