---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { ServicesPro } from '@/components/ServicesPro';
import ServicesSection from '@/components/Services.astro';
import AreasServed from '@/components/AreasServed.astro';
import FAQ from '@/components/FAQ.astro';
import { siteConfig } from '@/data/siteConfig';
import { getCollection } from 'astro:content';
import { getPublicResponsiveImage } from '@/lib/publicImages';

const title = `Services | ${siteConfig.brand.name}`;
const description =
  'Office cleaning, janitorial services, supplies/restocking, and facilities support—built for busy teams in San Francisco.';

const allServices = await getCollection('services');
const specialtyServices = allServices
  .filter((s) => s.data.category === 'specialty')
  .map((s) => s.data);

const heroImage = getPublicResponsiveImage(
  'gallery/services/janitorial-01.jpg',
  import.meta.env.BASE_URL,
  {
    sizes: '100vw',
  }
);

const heroImageMobile = getPublicResponsiveImage(
  'gallery/services/facilities-01.jpg',
  import.meta.env.BASE_URL,
  {
    sizes: '100vw',
  }
);

const makeHeroImage = (src: string, srcMobile: string, position = '50% 45%') => {
  const desktop = getPublicResponsiveImage(src, import.meta.env.BASE_URL, { sizes: '100vw' });
  const mobile = getPublicResponsiveImage(srcMobile, import.meta.env.BASE_URL, { sizes: '100vw' });
  return {
    src,
    srcSet: desktop.srcSet,
    sizes: desktop.sizes,
    srcMobile,
    srcSetMobile: mobile.srcSet,
    sizesMobile: mobile.sizes,
    position,
    alt: 'Commercial cleaning in a professional office space',
  };
};

const heroImages = [
  makeHeroImage(
    'gallery/services/janitorial-01.jpg',
    'gallery/services/janitorial-02.jpg',
    '50% 45%'
  ),
  makeHeroImage(
    'gallery/services/restocking-02.jpg',
    'gallery/services/restocking-03.jpg',
    '50% 55%'
  ),
  makeHeroImage('gallery/services/detail-02.jpg', 'gallery/services/detail-03.jpg', '50% 45%'),
];
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Services"
    description="Janitorial, detail cleaning, restocking, and light facilities support—delivered with clear scope, consistent checklists, and fast follow-up."
    imageSrc="gallery/services/janitorial-01.jpg"
    imageSrcMobile="gallery/services/facilities-01.jpg"
    imageAlt="Professional janitorial service in progress"
    imageSrcSet={heroImage.srcSet}
    imageSizes={heroImage.sizes}
    imageSrcSetMobile={heroImageMobile.srcSet}
    imageSizesMobile={heroImageMobile.sizes}
    imagePosition="50% 45%"
    images={heroImages}
    rotateIntervalMs={5000}
  />

  <ServicesPro client:visible />

  <ServicesSection
    id="specialty"
    heading="Specialty & add-on services"
    description="Add these one-off or periodic services when you need them. We confirm access, timing, and building rules during scoping—so pricing and expectations stay clear."
    presentation="dropdown"
    items={specialtyServices}
  />

  <AreasServed />

  <FAQ showWave={false} />

  <Footer slot="footer" />
</BaseLayout>
