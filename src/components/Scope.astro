---
import { siteConfig } from '@/data/siteConfig';
import WaveDivider from '@/components/WaveDivider.astro';
import SectionHeader from '@/components/ui/SectionHeader.astro';
import { makeHref } from '@/lib/nav';

type Props = {
  id?: string | undefined;
  heading?: string;
  description?: string | undefined;
  ctaHref?: string | undefined;
  ctaLabel?: string;
};

const {
  id,
  heading = 'Scope & service levels',
  description = siteConfig.scope.note,
  ctaHref,
  ctaLabel = 'Request a quote',
} = Astro.props as Props;

const href = makeHref(import.meta.env.BASE_URL);
const cta = ctaHref ?? href('contact/');

const levels = siteConfig.scope.levels;
const featuredIndex = levels.length >= 3 ? 1 : 0;
---

<section id={id} class="section section-muted section-creative scroll-mt-20 pb-0">
  <div class="container-page lg:max-w-6xl">
    <SectionHeader heading={heading} description={description}>
      <a
        slot="actions"
        class="btn-secondary w-full sm:w-auto"
        href={href('checklist/')}
        data-track="cta_click"
        data-location="scope_section"
        data-action="preview_checklist"
        data-label="Preview the checklist"
      >
        Preview the checklist
      </a>
      <a
        slot="actions"
        class="btn-primary w-full sm:w-auto"
        href={cta}
        data-track="cta_click"
        data-location="scope_section"
        data-action="request_quote"
        data-label={ctaLabel}
      >
        {ctaLabel}
      </a>
    </SectionHeader>

    <div class="mt-8 grid gap-5 lg:mt-12 lg:grid-cols-3 lg:gap-6">
      {
        levels.map((lvl, idx) => (
          <div
            class:list={[
              idx === featuredIndex
                ? 'card overflow-hidden p-6 sm:p-7 lg:-translate-y-3 lg:p-8'
                : 'card overflow-hidden p-5 sm:p-6 lg:p-7',
            ]}
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="text-strong text-lg font-bold lg:text-xl">{lvl.name}</h3>
                <p class="mt-1 text-sm text-muted lg:text-base">Best for: {lvl.bestFor}</p>
              </div>
              <span class="pill" aria-label="Checklist-driven">
                Checklist
              </span>
            </div>

            <ul class="check-list check-list--compact text-sm text-muted">
              {lvl.includes.map((i) => (
                <li>
                  <span class="check-icon check-icon--sm" aria-hidden="true">
                    âœ“
                  </span>
                  <span>{i}</span>
                </li>
              ))}
            </ul>

            {lvl.note && <p class="text-subtle mt-4 text-xs">{lvl.note}</p>}
          </div>
        ))
      }
    </div>
  </div>

  <div class="relative -mb-px mt-12">
    <WaveDivider tone="bg" class="absolute bottom-0 left-0 right-0" />
  </div>
</section>
