---
import { getCollection } from 'astro:content';
import type { Service } from '@/data/siteConfig';
import SectionHeader from '@/components/ui/SectionHeader.astro';
import { makeHref } from '@/lib/nav';

type Props = {
  id?: string;
  heading?: string;
  description?: string;
  limit?: number;
  items?: Service[];
  presentation?: 'cards' | 'dropdown';
  ctaHref?: string;
  ctaLabel?: string;
};

const {
  id,
  heading = 'Services',
  description = 'Pick a service. We’ll confirm scope on a walkthrough, then send a clear written quote.',
  limit,
  items: itemsOverride,
  presentation = 'cards',
  ctaHref,
  ctaLabel = 'Request a quote',
} = Astro.props;

const href = makeHref(import.meta.env.BASE_URL);

// Fetch from content collection if no override provided
const allServices = await getCollection('services');
const standardServices = allServices
  .filter((s) => s.data.category === 'standard')
  .map((s) => s.data);

const source = itemsOverride ?? standardServices;
const items = typeof limit === 'number' ? source.slice(0, limit) : source;
const cta = ctaHref ?? href('contact/');

const iconTypeFor = (title: string): 'sparkle' | 'supplies' | 'facility' | 'default' => {
  const t = title.toLowerCase();
  if (t.includes('clean')) return 'sparkle';
  if (t.includes('supply') || t.includes('restock')) return 'supplies';
  if (t.includes('facility') || t.includes('maintenance') || t.includes('support'))
    return 'facility';
  return 'default';
};
---

<section id={id} class="section section-creative scroll-mt-20">
  <div class="container-page">
    <SectionHeader heading={heading} description={description}>
      <a slot="actions" class="btn-secondary hidden sm:inline-flex" href={cta}>
        {ctaLabel}
      </a>
    </SectionHeader>

    {
      presentation === 'dropdown' ? (
        <details class="glass-panel mt-8 overflow-hidden p-0 lg:mt-12">
          <summary class="flex cursor-pointer list-none items-center justify-between gap-4 px-5 py-4 sm:px-6 sm:py-5 lg:px-8 lg:py-6">
            <div class="min-w-0">
              <p class="text-strong text-base font-semibold lg:text-lg">View specialty services</p>
              <p class="mt-1 text-sm text-muted lg:text-base">
                Expand to see what we can add on—each item is scoped and scheduled to your building
                rules.
              </p>
            </div>
            <span
              class="inline-flex h-10 w-10 flex-none items-center justify-center rounded-xl bg-brand-900 text-white shadow-md shadow-brand-900/15 lg:h-12 lg:w-12"
              aria-hidden="true"
            >
              ▾
            </span>
          </summary>

          <div class="border-t border-white/10 px-5 py-4 sm:px-6 lg:px-8 lg:py-6">
            {items.length === 0 ? (
              <p class="text-sm text-muted">No specialty services are listed yet.</p>
            ) : (
              <div class="divide-y divide-white/10">
                {items.map((s) => (
                  <div class="py-4 lg:py-5">
                    <p class="text-strong font-semibold lg:text-lg">{s.title}</p>
                    <p class="mt-1 text-sm text-muted lg:text-base">{s.description}</p>
                  </div>
                ))}
              </div>
            )}

            <div class="mt-5 flex flex-col gap-3 sm:flex-row">
              <a class="btn-secondary w-full sm:w-auto" href={cta}>
                {ctaLabel}
              </a>
              <p class="text-xs text-muted sm:self-center">
                Not sure what you need? Tell us the goal—we’ll recommend the right add-ons.
              </p>
            </div>
          </div>
        </details>
      ) : (
        <div
          class:list={[
            'mt-8 grid gap-5',
            items.length >= 3 ? 'md:auto-rows-fr md:grid-cols-3' : 'md:grid-cols-2',
          ]}
        >
          {items.map((s, index) => {
            const iconType = iconTypeFor(s.title);
            const isFeatured = items.length >= 3 && index === 0;

            return (
              <article
                class:list={[
                  'glass-card group relative overflow-hidden p-5 sm:p-6',
                  isFeatured ? 'md:col-span-2 md:p-8' : '',
                ]}
              >
                <div
                  aria-hidden="true"
                  class="pointer-events-none absolute inset-0 bg-gradient-to-br from-brand-500/5 via-transparent to-yellow-500/5 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
                />
                <div class="relative">
                  <div class="flex items-start gap-4">
                    <span
                      class="inline-flex h-12 w-12 flex-none items-center justify-center rounded-xl bg-gradient-to-br from-brand-600 to-brand-800 text-white shadow-lg shadow-brand-900/20 ring-1 ring-white/10 transition-transform duration-300 group-hover:rotate-3 group-hover:scale-110"
                      aria-hidden="true"
                    >
                      {iconType === 'sparkle' && (
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M12 2l1.2 5.1L18 9l-4.8 1.9L12 16l-1.2-5.1L6 9l4.8-1.9L12 2z"
                            fill="currentColor"
                            opacity="0.95"
                          />
                          <path
                            d="M19 13l.8 3.2L23 17l-3.2.8L19 21l-.8-3.2L15 17l3.2-.8L19 13z"
                            fill="currentColor"
                            opacity="0.85"
                          />
                        </svg>
                      )}
                      {iconType === 'supplies' && (
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path d="M7 7h10v3H7V7z" fill="currentColor" opacity="0.9" />
                          <path
                            d="M6 10h12v11a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V10z"
                            fill="currentColor"
                            opacity="0.95"
                          />
                          <path d="M9 6a3 3 0 0 1 6 0v1H9V6z" fill="currentColor" opacity="0.75" />
                        </svg>
                      )}
                      {iconType === 'facility' && (
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path d="M4 20V9l8-5 8 5v11H4z" fill="currentColor" opacity="0.95" />
                          <path d="M10 20v-6h4v6h-4z" fill="currentColor" opacity="0.75" />
                        </svg>
                      )}
                      {iconType === 'default' && (
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M12 2a7 7 0 0 0-7 7v3a7 7 0 0 0 14 0V9a7 7 0 0 0-7-7z"
                            fill="currentColor"
                            opacity="0.95"
                          />
                          <path
                            d="M9 21h6"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            opacity="0.8"
                          />
                        </svg>
                      )}
                    </span>

                    <div class="min-w-0">
                      <h3 class="text-strong text-lg font-bold">{s.title}</h3>
                      <p class="mt-2 text-sm text-muted">{s.description}</p>
                    </div>
                  </div>

                  <ul
                    class:list={[
                      'check-list check-list--compact text-sm text-muted',
                      isFeatured ? 'sm:grid-cols-2' : '',
                    ]}
                  >
                    {s.bullets.map((b) => (
                      <li>
                        <span class="check-icon check-icon--sm" aria-hidden="true">
                          ✓
                        </span>
                        <span>{b}</span>
                      </li>
                    ))}
                  </ul>

                  {isFeatured && (
                    <div class="mt-6 flex flex-col gap-3 sm:flex-row">
                      <a class="btn-secondary w-full sm:w-auto" href={href('services/')}>
                        See all services
                      </a>
                    </div>
                  )}
                </div>
              </article>
            );
          })}
        </div>
      )
    }

    {
      presentation !== 'dropdown' && (
        <div class="mt-8 sm:hidden">
          <a class="btn-secondary w-full" href={cta}>
            {ctaLabel}
          </a>
        </div>
      )
    }
  </div>
</section>
