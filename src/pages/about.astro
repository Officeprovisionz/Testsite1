---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { ProcessStepsPro } from '@/components/ProcessStepsPro';
import TrustBar from '@/components/TrustBar.astro';
import AreasServed from '@/components/AreasServed.astro';
import QualityPromise from '@/components/QualityPromise.astro';
import ConversionStrip from '@/components/ConversionStrip.astro';
import ProofShowcase from '@/components/ProofShowcase.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `About | ${siteConfig.brand.name}`;
const description =
  'Commercial-grade cleaning focused on clear communication, consistent checklists, and respectful service.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="A cleaner workspace, a simpler workday"
    description="We’re built for reliability: clear communication, consistent checklists, and a team that respects your space."
  />

  <TrustBar />

  <section class="section pb-0" id="how-we-work">
    <div class="container-page">
      <div class="mb-12 text-center">
        <h2 class="heading-2">How we work</h2>
        <p class="text-muted mx-auto mt-4 max-w-2xl text-lg">
          Great cleaning is a process. We confirm scope, follow a checklist, and keep you in the
          loop—so you always know what to expect.
        </p>
      </div>

      <ProcessStepsPro client:visible />
    </div>
  </section>

  <section class="section" id="expect">
    <div class="container-page">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <h2 class="heading-2">What to expect</h2>
          <p class="text-muted mt-4 text-lg">
            We don't just clean; we communicate. From the first walkthrough to the daily checklist,
            everything is designed to be clear and consistent.
          </p>
          <ul class="check-list">
            <li>
              <span class="check-icon" aria-hidden="true">✓</span>
              <span class="text-slate-700 dark:text-slate-300"
                >Consistent crews who know your space</span
              >
            </li>
            <li>
              <span class="check-icon" aria-hidden="true">✓</span>
              <span class="text-slate-700 dark:text-slate-300"
                >Real-time reporting and issue flagging</span
              >
            </li>
            <li>
              <span class="check-icon" aria-hidden="true">✓</span>
              <span class="text-slate-700 dark:text-slate-300"
                >Flexible scheduling to fit your operations</span
              >
            </li>
          </ul>
        </div>
        <div class="glass-panel relative overflow-hidden p-6 sm:p-8">
          <div
            aria-hidden="true"
            class="from-brand-200/16 to-brand-300/12 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
          >
          </div>
          <div class="relative">
            <p class="eyebrow">Our commitments</p>
            <h3 class="heading-3 mt-2">Consistency you can count on</h3>
            <p class="text-muted mt-3 text-sm">
              The details vary by space, but our process stays the same—clear scope, checklist
              delivery, and fast follow-up.
            </p>

            <div class="mt-6 grid gap-4 sm:grid-cols-3">
              <div class="glass rounded-2xl border p-4">
                <p class="text-strong text-sm font-semibold">Clear scope</p>
                <p class="text-muted mt-1 text-sm">Written checklist + agreed add-ons.</p>
              </div>
              <div class="glass rounded-2xl border p-4">
                <p class="text-strong text-sm font-semibold">Fast response</p>
                <p class="text-muted mt-1 text-sm">Quick replies during business hours.</p>
              </div>
              <div class="glass rounded-2xl border p-4">
                <p class="text-strong text-sm font-semibold">Follow-through</p>
                <p class="text-muted mt-1 text-sm">Issues flagged + resolved promptly.</p>
              </div>
            </div>

            <p class="text-subtle mt-4 text-xs">
              Want more detail? Ask for a sample checklist during your walkthrough.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <QualityPromise
    id="quality"
    heading="Reliability is the product"
    description="We show up, follow the checklist, and communicate clearly—so your space stays client-ready without extra management work."
  />

  <AreasServed />

  <ProofShowcase
    id="proof"
    heading="Proof you can see (without the hype)"
    description="A few snapshots of the spaces we support—clean, consistent, and checklist-driven."
  />

  <ConversionStrip
    id="quote"
    tone="muted"
    eyebrow="Get started"
    heading="Want a walkthrough this week?"
    description="Request a walkthrough, call/text, or preview our checklist. We’ll confirm scope and send a clear written quote."
  />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
