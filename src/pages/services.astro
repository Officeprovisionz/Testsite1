---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { ServicesPro } from '@/components/ServicesPro';
import ServicesSection from '@/components/Services.astro';
import AreasServed from '@/components/AreasServed.astro';
import FAQ from '@/components/FAQ.astro';
import { siteConfig } from '@/data/siteConfig';
import { getCollection } from 'astro:content';
import { getPublicResponsiveImage } from '@/lib/publicImages';

const title = `Services | ${siteConfig.brand.name}`;
const description =
  'Office cleaning, janitorial services, supplies/restocking, and facilities support—built for busy teams in San Francisco.';

const allServices = await getCollection('services');
const specialtyServices = allServices
  .filter((s) => s.data.category === 'specialty')
  .map((s) => s.data);

const heroImage = getPublicResponsiveImage(
  'gallery/services/janitorial-01.jpg',
  import.meta.env.BASE_URL,
  {
    sizes: '100vw',
  }
);
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Services"
    description="From recurring janitorial to restocking and facilities support—scoped clearly and delivered consistently. We confirm scope before the job."
    imageSrc="gallery/services/janitorial-01.jpg"
    imageAlt="Professional janitorial service in progress"
    imageSrcSet={heroImage.srcSet}
    imageSizes={heroImage.sizes}
  />

  <ServicesPro client:visible />

  <ServicesSection
    id="specialty"
    heading="Specialty & add-on services"
    description="Add these one-off or periodic services when you need them. We confirm access, timing, and building rules during scoping—so pricing and expectations stay clear."
    presentation="dropdown"
    items={specialtyServices}
  />

  <AreasServed />

  <FAQ showWave={false} />

  <Footer slot="footer" />
</BaseLayout>
