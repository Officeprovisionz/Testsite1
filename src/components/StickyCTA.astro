---
import { siteConfig } from '@/data/siteConfig';

const telHref = `tel:${siteConfig.contact.phoneE164}`;
const smsHref = `sms:${siteConfig.contact.phoneE164}?&body=${encodeURIComponent(siteConfig.contact.smsBody)}`;
const mailtoHref = `mailto:${siteConfig.contact.email}`;
const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
---

<div
  class="glass border-app fixed inset-x-0 bottom-0 z-50 border-t shadow-soft md:hidden"
  aria-label="Quick actions"
>
  <div class="container-page safe-bottom-pad grid gap-2 pt-3">
    <div class="flex items-center gap-3">
      <a class="btn-secondary flex-1" href={telHref}>Call/Text</a>
      <a class="btn-primary flex-1" href={href('contact/')}>Request a walkthrough</a>
    </div>
    <div
      class="text-subtle mx-auto flex flex-wrap items-center justify-center gap-x-4 gap-y-1 text-xs"
    >
      <a class="link link-muted" href={href('checklist/')}>Preview checklist</a>
      <a class="link link-muted" href={smsHref}>Text</a>
      <a class="link link-muted" href={mailtoHref}>Email</a>
    </div>
  </div>
</div>
