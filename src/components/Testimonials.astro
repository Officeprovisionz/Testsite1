---
import { siteConfig } from '@/data/siteConfig';
---

<section class="section bg-slate-50">
  <div class="container-page">
    <h2 class="heading-2">What clients say</h2>
    <p class="lede">
      Real feedback is the best marketing. Swap these placeholders with your own testimonials.
    </p>

    <div class="mt-8 grid gap-5 md:grid-cols-3">
      {
        siteConfig.testimonials.map((t) => (
          <figure class="card card-hover p-6">
            <blockquote class="text-sm text-slate-700">“{t.quote}”</blockquote>
            <figcaption class="mt-4 text-sm font-semibold text-slate-900">
              {t.name} <span class="font-normal text-slate-600">· {t.location}</span>
            </figcaption>
          </figure>
        ))
      }
    </div>
  </div>
</section>
