---
type Props = {
  class?: string;
};

const { class: className } = Astro.props;
---

<div class:list={['pointer-events-none py-6 md:py-8', className]} aria-hidden="true">
  <div class="container-page">
    <div class="text-brand-400/55 dark:text-brand-300/45">
      <svg
        width="100%"
        height="28"
        viewBox="0 0 1000 28"
        preserveAspectRatio="none"
        role="presentation"
      >
        <!-- Main cable (subtle arc) -->
        <path
          d="M0 14 C 180 5, 320 5, 500 14 C 680 23, 820 23, 1000 14"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          opacity="0.9"></path>

        <!-- Vertical hangers (very subtle) -->
        <path
          d="
            M80 14 V 24
            M140 14 V 25
            M200 14 V 24
            M260 14 V 25
            M320 14 V 24
            M380 14 V 25
            M440 14 V 24
            M500 14 V 26
            M560 14 V 24
            M620 14 V 25
            M680 14 V 24
            M740 14 V 25
            M800 14 V 24
            M860 14 V 25
            M920 14 V 24
          "
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          opacity="0.35"></path>

        <!-- Faint baseline (helps it read as a divider, not an illustration) -->
        <path
          d="M0 26 H1000"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          opacity="0.18"></path>
      </svg>
    </div>
  </div>
</div>
