---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import PageHeader from '@/components/PageHeader.astro';
import ServicesSection from '@/components/Services.astro';
import AreasServed from '@/components/AreasServed.astro';
import FAQ from '@/components/FAQ.astro';
import TrustBar from '@/components/TrustBar.astro';
import SectionNav from '@/components/SectionNav.astro';
import WaveDivider from '@/components/WaveDivider.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Services | ${siteConfig.brand.name}`;
const description =
  'Office cleaning, janitorial services, supplies/restocking, and facilities support—built for busy teams in San Francisco.';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeader
    title="Services"
    description="From recurring janitorial to restocking and facilities support—scoped clearly and delivered consistently. We confirm scope before the job."
  />

  <TrustBar />

  <SectionNav
    items={[
      { id: 'services', label: 'Core' },
      { id: 'specialty', label: 'Add-ons' },
      { id: 'areas', label: 'Areas' },
      { id: 'faq', label: 'FAQ' },
    ]}
    ariaLabel="Services sections"
  />

  <section class="section section-creative pb-0">
    <div class="container-page relative">
      <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 -top-14 -z-10">
        <div class="mx-auto h-72 w-[min(74rem,96vw)] rounded-full bg-brand-500/10 blur-3xl"></div>
      </div>

      <div class="grid gap-6 lg:grid-cols-12 lg:items-stretch">
        <div class="glass-card relative overflow-hidden p-7 sm:p-9 lg:col-span-7">
          <div
            aria-hidden="true"
            class="from-brand-200/18 to-brand-300/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
          >
          </div>
          <div class="relative">
            <p class="eyebrow">Commercial cleaning, done right</p>
            <h2 class="heading-2 mt-2">
              Everything we do is scoped, checklist-based, and consistent.
            </h2>
            <p class="lede">
              Choose a core service for your baseline schedule, then add specialty services as
              needed. We confirm scope and access before the job.
            </p>

            <div class="mt-7 flex flex-col gap-3 sm:flex-row">
              <a class="btn-primary" href="#services">Explore core services</a>
              <a class="btn-secondary" href="#specialty">See add-ons</a>
              <a class="btn-secondary" href={`${base}contact/`}>Request a quote</a>
            </div>
          </div>
        </div>

        <div class="grid gap-6 lg:col-span-5">
          <div class="glass-panel relative overflow-hidden p-6">
            <div
              aria-hidden="true"
              class="from-brand-200/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent to-brand-300/10"
            >
            </div>
            <div class="relative">
              <p class="text-strong text-sm font-semibold">Core services</p>
              <p class="text-muted mt-2 text-sm">
                Recurring support for offices and shared spaces—ideal for weekly, 2–3x/week, or
                daily schedules.
              </p>
            </div>
          </div>

          <div class="glass-panel relative overflow-hidden p-6">
            <div
              aria-hidden="true"
              class="from-brand-200/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent to-brand-300/10"
            >
            </div>
            <div class="relative">
              <p class="text-strong text-sm font-semibold">Specialty + add-ons</p>
              <p class="text-muted mt-2 text-sm">
                Deep/detail cleaning, post-construction cleanup, floor care, windows, restocking,
                and facilities support—scoped to your space.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="relative -mb-px mt-12">
      <WaveDivider tone="bg" class="absolute bottom-0 left-0 right-0" />
    </div>
  </section>

  <ServicesSection
    id="services"
    heading="Core services"
    description="The most common ways teams use us for ongoing support."
    ctaLabel="Request a quote"
  />

  <ServicesSection
    id="specialty"
    heading="Specialty + add-on services"
    description="Popular add-ons we can scope and schedule based on your space and building requirements."
    items={siteConfig.specialtyServices}
    ctaLabel="Request a quote"
  />

  <AreasServed />

  <FAQ showWave={false} />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
