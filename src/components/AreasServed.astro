---
import { siteConfig } from '@/data/siteConfig';
---

<section id="areas" class="section section-creative scroll-mt-20 lg:py-28">
  <div class="container-page relative lg:max-w-6xl">
    <h2 class="heading-2 lg:text-4xl">{siteConfig.areasServed.title}</h2>
    <p class="lede lg:text-lg">
      Not seeing your neighborhood? Send us your addressâ€”we'll confirm availability.
    </p>

    <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 -top-10 -z-10">
      <div class="mx-auto h-64 w-[min(70rem,94vw)] rounded-full bg-brand-400/10 blur-3xl"></div>
    </div>

    <div class="glass-panel mt-8 p-5 sm:p-6 lg:mt-10 lg:p-8">
      <ul class="grid gap-2 text-sm text-muted sm:grid-cols-2 lg:grid-cols-3 lg:gap-3 lg:text-base">
        {
          siteConfig.areasServed.items.map((a) => (
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-brand-600" aria-hidden="true" />
              <span>{a}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
