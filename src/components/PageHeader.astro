---
import { siteConfig } from '@/data/siteConfig';
import WaveDivider from '@/components/WaveDivider.astro';

type Props = {
  title: string;
  description?: string;
  align?: 'left' | 'center';
};

const { title, description, align = 'left' } = Astro.props;

const telHref = `tel:${siteConfig.contact.phoneE164}`;

const isCenter = align === 'center';
---

<section class="hero-splash">
  <div class:list={['container-page relative', isCenter ? 'text-center' : '']}>
    <p class="eyebrow">{siteConfig.brand.name}</p>
    <h1 class="heading-1 mt-4 text-balance">{title}</h1>
    {
      description && (
        <p class:list={['lede mt-4 text-pretty', isCenter ? 'mx-auto max-w-2xl' : 'max-w-2xl']}>
          {description}
        </p>
      )
    }

    <div
      class:list={[
        'mt-7 flex flex-col gap-3',
        isCenter ? 'sm:flex-row sm:justify-center' : 'sm:flex-row',
      ]}
    >
      <a class="btn-secondary" href={telHref}>Call/Text {siteConfig.contact.phoneDisplay}</a>
    </div>
  </div>

  <div class="relative -mb-px mt-10">
    <WaveDivider tone="surface" class="absolute bottom-0 left-0 right-0" />
  </div>
</section>
