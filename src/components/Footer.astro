---
import { siteConfig } from '@/data/siteConfig';

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
---

<footer class="border-t border-slate-200 bg-white">
  <div class="container-page py-10">
    <div class="grid gap-6 md:grid-cols-2 md:items-start">
      <div>
        <p class="text-base font-extrabold tracking-tight text-slate-900">
          {siteConfig.brand.name}
        </p>
        <p class="mt-2 max-w-prose text-sm text-slate-700">{siteConfig.brand.tagline}</p>
      </div>
      <div class="grid gap-2 text-sm text-slate-700 md:justify-items-end">
        <a
          class="underline decoration-slate-300 underline-offset-4 hover:text-slate-900"
          href={href('services/')}>Services</a
        >
        <a
          class="underline decoration-slate-300 underline-offset-4 hover:text-slate-900"
          href={href('services/#pricing')}>Pricing</a
        >
        <a
          class="underline decoration-slate-300 underline-offset-4 hover:text-slate-900"
          href={href('contact/')}>Contact</a
        >
      </div>
    </div>
    <p class="mt-8 text-xs text-slate-500">
      Â© {new Date().getFullYear()}
      {siteConfig.brand.name}. All rights reserved.
    </p>
  </div>
</footer>
