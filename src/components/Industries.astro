---
import { siteConfig } from '@/data/siteConfig';

type Props = {
  id?: string;
  heading?: string;
  description?: string;
};

const {
  id,
  heading = 'Who we serve',
  description = 'Commercial cleaning built for real workplaces—scoped clearly and delivered consistently.',
} = Astro.props;
---

<section id={id} class="section section-creative scroll-mt-20">
  <div class="container-page">
    <div class="section-head">
      <div>
        <h2 class="heading-2">{heading}</h2>
        <p class="lede">{description}</p>
      </div>
    </div>

    <div class="mt-8 grid gap-5 md:grid-cols-2">
      {
        siteConfig.industries.map((it) => (
          <article class="panel border-app relative overflow-hidden border p-6">
            <div
              aria-hidden="true"
              class="from-brand-200/18 to-brand-300/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
            />
            <div class="relative">
              <h3 class="text-strong text-lg font-bold">{it.title}</h3>
              <p class="text-muted mt-2 text-sm leading-relaxed">{it.description}</p>
              <ul class="text-muted mt-5 grid gap-2 text-sm sm:grid-cols-3">
                {it.bullets.map((b) => (
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 inline-flex h-4 w-4 flex-none items-center justify-center rounded-md bg-brand-600 text-[10px] font-bold text-white"
                      aria-hidden="true"
                    >
                      ✓
                    </span>
                    <span>{b}</span>
                  </li>
                ))}
              </ul>
            </div>
          </article>
        ))
      }
    </div>

    <div class="mt-8 flex flex-col gap-3 sm:flex-row">
      <a class="btn-primary" href={`${import.meta.env.BASE_URL}contact/`}>Request a quote</a>
      <a class="btn-secondary" href={`${import.meta.env.BASE_URL}services/`}>Explore services</a>
    </div>
  </div>
</section>
