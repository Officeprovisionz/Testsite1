---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import Gallery from '@/components/Gallery.astro';
import ContactSection from '@/components/Contact.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Results | ${siteConfig.brand.name}`;
const description =
  'A closer look at recent work across offices and commercial spaces. Clear scope, consistent delivery, and clean results.';

const base = import.meta.env.BASE_URL;
const contactHref = `${base}contact/`;
const servicesHref = `${base}services/`;
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Results"
    description="A closer look at recent work across offices and commercial spaces—focused on consistency, communication, and a checklist-based scope."
  />

  <Gallery
    id="gallery"
    heading="Recent results"
    description="Photos and examples of the spaces we support. Swap in your own images to showcase your best work."
    showTip={false}
    ctaHref={contactHref}
    ctaLabel="Request a walkthrough"
  />

  <section class="section section-muted section-creative">
    <div class="container-page">
      <div class="glass-card relative overflow-hidden p-7 sm:p-10">
        <div
          aria-hidden="true"
          class="from-brand-200/16 to-brand-300/12 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
        >
        </div>
        <div class="relative grid gap-8 md:grid-cols-2 md:items-center">
          <div>
            <p class="eyebrow">Next step</p>
            <h2 class="heading-2 mt-2">Want results like these?</h2>
            <p class="lede">
              Tell us your space, access window, and frequency. We’ll confirm scope and send a clear
              quote.
            </p>
          </div>
          <div class="flex flex-col gap-3 sm:flex-row md:justify-end">
            <a href={contactHref} class="btn-primary">Request a walkthrough</a>
            <a href={servicesHref} class="btn-secondary">Browse services</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <ContactSection id="quote" heading="Request a walkthrough" />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
