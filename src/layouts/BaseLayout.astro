---
import '@/styles/global.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/playfair-display/600.css';
import '@fontsource/playfair-display/700.css';
import '@fontsource/playfair-display/800.css';
import { siteConfig } from '@/data/siteConfig';
import { ClientRouter } from 'astro:transitions';

type Props = {
  title?: string;
  description?: string;
  /** Prevent search engines from indexing this page (useful for dev-only pages). */
  noIndex?: boolean;
};

const {
  title = siteConfig.seo.title,
  description = siteConfig.seo.description,
  noIndex = false,
} = Astro.props;

const base = import.meta.env.BASE_URL;

const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const ogPath = `${base}og-image.svg`;
const ogUrl = Astro.site ? new URL(ogPath, Astro.site).toString() : ogPath;
const faviconHref = `${base}favicon.svg`;
const manifestHref = `${base}site.webmanifest`;

const assetNoise = `${base}noise.svg`;

const jsonLd = (() => {
  const [localityRaw, regionRaw] = siteConfig.brand.city.split(',').map((s) => s.trim());
  const addressLocality = localityRaw || undefined;
  const addressRegion = regionRaw || undefined;
  const url = Astro.site ? new URL(import.meta.env.BASE_URL, Astro.site).toString() : undefined;

  const data = {
    '@context': 'https://schema.org',
    '@type': 'LocalBusiness',
    name: siteConfig.brand.name,
    description: siteConfig.seo.description,
    url,
    telephone: siteConfig.contact.phoneE164,
    email: siteConfig.contact.email,
    address: {
      '@type': 'PostalAddress',
      addressLocality,
      addressRegion,
      addressCountry: 'US',
    },
    areaServed: siteConfig.areasServed.items,
  };

  // Prevent accidental "</script>" injection via safe escaping.
  return JSON.stringify(data).replace(/</g, '\\u003c');
})();
---

<!doctype html>
<html
  lang="en"
  data-theme="teal"
  data-mode="auto"
  style={`--asset-hero-bg: none; --asset-noise: url('${assetNoise}')`}
>
  <head>
    <meta charset="utf-8" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="dns-prefetch" href="https://images.unsplash.com" />

    {
      /* Fonts are self-hosted via @fontsource imports (see frontmatter) to avoid third-party requests. */
    }
    <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
    <meta name="color-scheme" content="light dark" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content={siteConfig.seo.themeColor}
    />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#020617" />
    <ClientRouter />

    <script is:inline>
      (() => {
        // Vendor-neutral tracking hook.
        // - If Plausible is present, we forward events.
        // - If GTM dataLayer is present, we push events.
        // - Otherwise we no-op (and optionally log in dev).
        if (typeof window === 'undefined') return;

        window.damraTrack = (event, props) => {
          try {
            if (typeof window.plausible === 'function') {
              window.plausible(event, props ? { props } : undefined);
              return;
            }
            if (Array.isArray(window.dataLayer)) {
              window.dataLayer.push({ event, ...(props || {}) });
              return;
            }
          } catch {
            // ignore
          }
        };
      })();
    </script>

    <script is:inline>
      (() => {
        try {
          const savedMode = localStorage.getItem('mode');
          if (savedMode === 'light' || savedMode === 'dark' || savedMode === 'auto') {
            document.documentElement.dataset.mode = savedMode;
          }
          const saved = localStorage.getItem('theme');
          if (saved) document.documentElement.dataset.theme = saved;
        } catch {
          // ignore
        }
      })();
    </script>

    <script is:inline>
      (() => {
        // Keep Tailwind `dark:` variants and CSS variables aligned.
        // Problem this solves: when `data-mode="auto"` and the OS is dark, CSS media queries may flip
        // some tokens while Tailwind `dark:` styles and shadcn vars stay in light mode -> mixed theme.
        if (typeof window === 'undefined') return;

        const root = document.documentElement;
        if (root.dataset.modeSyncInit === 'true') return;
        root.dataset.modeSyncInit = 'true';

        const getMode = () => {
          const m = root.dataset.mode;
          return m === 'light' || m === 'dark' || m === 'auto' ? m : 'auto';
        };

        const getEffective = () => {
          const m = getMode();
          if (m === 'light' || m === 'dark') return m;
          try {
            return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
          } catch {
            return 'light';
          }
        };

        const apply = () => {
          const eff = getEffective();
          root.dataset.modeEffective = eff;
          root.classList.toggle('dark', eff === 'dark');
        };

        apply();

        // React to system changes when in auto.
        try {
          const mq = window.matchMedia('(prefers-color-scheme: dark)');
          const onChange = () => {
            if (getMode() !== 'auto') return;
            apply();
          };
          if (typeof mq.addEventListener === 'function') {
            mq.addEventListener('change', onChange);
          } else {
            // Legacy fallback (e.g. older Safari) without using deprecated addListener.
            // `onchange` is widely supported and avoids deprecation warnings in typechecking.
            mq.onchange = onChange;
          }
        } catch {
          // ignore
        }

        // Allow other scripts (Header toggles, etc.) to request a re-sync.
        window.addEventListener('damra:mode-change', apply);
      })();
    </script>

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <link rel="icon" href={faviconHref} sizes="any" type="image/svg+xml" />
    <link rel="mask-icon" href={faviconHref} color={siteConfig.seo.themeColor} />
    <link rel="manifest" href={manifestHref} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteConfig.brand.name} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    <meta property="og:image" content={ogUrl} />
    <meta property="og:image:width" content={String(siteConfig.seo.ogImage.width)} />
    <meta property="og:image:height" content={String(siteConfig.seo.ogImage.height)} />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogUrl} />

    {/* Geographic meta tags for local business SEO */}
    <meta name="geo.region" content={siteConfig.seo.geo.region} />
    <meta name="geo.placename" content={siteConfig.seo.geo.placename} />
    <meta
      name="geo.position"
      content={`${siteConfig.seo.geo.latitude};${siteConfig.seo.geo.longitude}`}
    />
    <meta name="ICBM" content={`${siteConfig.seo.geo.latitude}, ${siteConfig.seo.geo.longitude}`} />

    <script type="application/ld+json" is:inline set:html={jsonLd} />

    <script>
      const root = document.documentElement;

      const prefersReducedMotion = (() => {
        try {
          return window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        } catch {
          return false;
        }
      })();

      const isTouchLike = (() => {
        try {
          return (
            window.matchMedia('(pointer: coarse)').matches ||
            window.matchMedia('(hover: none)').matches
          );
        } catch {
          return false;
        }
      })();

      if (prefersReducedMotion || isTouchLike) {
        // Respect OS/user preference: avoid forced smooth scrolling.
      } else {
        if (root.dataset.lenisInit !== 'true') {
          root.dataset.lenisInit = 'true';
          // Only load Lenis when we intend to use it.
          import('lenis')
            .then((mod) => {
              const Lenis = (mod as { default: new () => { raf: (t: number) => void } }).default;
              const lenis = new Lenis();

              function raf(time: number) {
                lenis.raf(time);
                requestAnimationFrame(raf);
              }

              requestAnimationFrame(raf);
            })
            .catch(() => {
              // If Lenis fails to load for any reason, fall back to native scrolling.
            });
        }
      }

      // Track scroll progress for the progress bar
      let scrollRaf = 0;
      const updateScrollProgress = () => {
        scrollRaf = 0;
        const scrollTop = window.scrollY || document.documentElement.scrollTop;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        const progress = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
        root.style.setProperty('--scroll-progress', `${progress}%`);
      };

      const requestScrollProgress = () => {
        if (scrollRaf) return;
        scrollRaf = window.requestAnimationFrame(updateScrollProgress);
      };

      if (root.dataset.scrollProgressInit !== 'true') {
        root.dataset.scrollProgressInit = 'true';
        window.addEventListener('scroll', requestScrollProgress, { passive: true });
        window.addEventListener('resize', requestScrollProgress);
        document.addEventListener('astro:page-load', requestScrollProgress);
      }

      requestScrollProgress();
    </script>

    <script is:inline define:vars={{ base, isDev: import.meta.env.DEV }}>
      (() => {
        // Register a lightweight service worker in production builds.
        // Keeps repeat visits fast and provides a basic offline shell.
        if (typeof window === 'undefined') return;
        const root = document.documentElement;
        if (root.dataset.swInit === 'true') return;
        root.dataset.swInit = 'true';
        if (isDev) return;
        if (!('serviceWorker' in navigator)) return;

        const swUrl = `${base}sw.js`;

        window.addEventListener('load', () => {
          navigator.serviceWorker
            .register(swUrl, { scope: base })
            .then((reg) => {
              // Listen for a new SW waiting to activate (common after deploy).
              const onStateChange = () => {
                if (reg.installing?.state === 'installed' && navigator.serviceWorker.controller) {
                  // A newer SW is ready; tell it to activate immediately.
                  reg.waiting?.postMessage({ type: 'SKIP_WAITING' });
                }
              };

              if (reg.installing) {
                reg.installing.addEventListener('statechange', onStateChange);
              }

              reg.addEventListener('updatefound', () => {
                reg.installing?.addEventListener('statechange', onStateChange);
              });

              // When the new SW takes over, reload to ensure fresh assets.
              let refreshing = false;
              navigator.serviceWorker.addEventListener('controllerchange', () => {
                if (refreshing) return;
                refreshing = true;
                window.location.reload();
              });
            })
            .catch(() => {
              // ignore
            });
        });
      })();
    </script>

    {/* Optional: add your analytics provider script here (Plausible/GTM/etc). */}
  </head>
  <body id="top">
    <div class="scroll-progress" aria-hidden="true"></div>

    <a
      href="#main-content"
      class="border-app surface text-strong sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-xl focus:px-4 focus:py-2 focus:shadow-soft"
    >
      Skip to content
    </a>

    <slot name="header" />

    <main id="main-content" class="pb-0">
      <slot />
    </main>

    <slot name="footer" />
  </body>
</html>
