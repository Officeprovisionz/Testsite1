---
import { siteConfig } from '@/data/siteConfig';
---

<section id="areas" class="section scroll-mt-20">
  <div class="container-page relative">
    <h2 class="heading-2">{siteConfig.areasServed.title}</h2>
    <p class="lede">
      Not seeing your neighborhood? Send us your address—we’ll confirm availability.
    </p>

    <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 -top-10 -z-10">
      <div class="mx-auto h-64 w-[min(70rem,94vw)] rounded-full bg-brand-400/10 blur-3xl"></div>
    </div>

    <div class="glass-panel mt-8 p-6">
      <ul class="text-muted grid gap-2 text-sm sm:grid-cols-2 lg:grid-cols-3">
        {
          siteConfig.areasServed.items.map((a) => (
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-brand-600" aria-hidden="true" />
              <span>{a}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
