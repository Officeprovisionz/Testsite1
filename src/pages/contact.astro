---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import ContactSection from '@/components/Contact.astro';
import TrustBar from '@/components/TrustBar.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Contact | ${siteConfig.brand.name}`;
const description =
  'Request a quote for cleaning, supplies/restocking, or facilities support. We respond quickly during business hours.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Contact"
    description="Request a quote or ask a question. We’ll confirm scope, timing, and a clear quote before service."
  />

  <TrustBar />

  <section class="section pb-0">
    <div class="container-page">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div>
          <h2 class="heading-2">Tell us your space. We’ll handle the rest.</h2>
          <p class="text-muted mt-4 text-lg">
            We confirm scope, access, and schedule—then send a clear, written quote before any
            service begins.
          </p>

          <div class="mt-8 space-y-6">
            <div class="flex items-start gap-4">
              <div
                class="flex h-10 w-10 flex-none items-center justify-center rounded-lg bg-brand-100 text-brand-600 dark:bg-brand-900/30 dark:text-brand-400"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Phone</h3>
                <p class="mt-1 text-slate-600 dark:text-slate-400">
                  <a
                    href={`tel:${siteConfig.contact.phoneE164}`}
                    class="hover:text-brand-600 dark:hover:text-brand-400"
                  >
                    {siteConfig.contact.phoneDisplay}
                  </a>
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="flex h-10 w-10 flex-none items-center justify-center rounded-lg bg-brand-100 text-brand-600 dark:bg-brand-900/30 dark:text-brand-400"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Email</h3>
                <p class="mt-1 text-slate-600 dark:text-slate-400">
                  <a
                    href={`mailto:${siteConfig.contact.email}`}
                    class="hover:text-brand-600 dark:hover:text-brand-400"
                  >
                    {siteConfig.contact.email}
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>

        <ContactSection id="quote" heading="Send a message" description="" variant="embed" />
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
