---
import { siteConfig } from '@/data/siteConfig';
import { makeHref } from '@/lib/nav';
import { makeMailtoHref, makeTelHref } from '@/lib/links';

const href = makeHref(import.meta.env.BASE_URL);
const telHref = makeTelHref(siteConfig.contact.phoneE164);
const mailtoHref = makeMailtoHref(siteConfig.contact.email);

const base = import.meta.env.BASE_URL;
const logoMarkSrc = `${base}brand/logo-mark.svg`;
---

<footer
  class="footer-surface bg-gradient-to-b from-white/85 via-white/70 to-brand-50/25 dark:from-slate-950/80 dark:via-slate-950/70 dark:to-slate-950/90"
>
  <div class="container-page pb-20 pt-10 md:py-12 lg:py-16">
    <div class="grid gap-8 md:grid-cols-4 md:gap-9 lg:gap-12">
      <!-- Brand Column -->
      <div class="md:col-span-1">
        <a
          href={href('')}
          class="inline-flex items-center gap-3"
          aria-label={`${siteConfig.brand.name} home`}
        >
          <img
            src={logoMarkSrc}
            alt=""
            width="28"
            height="28"
            loading="lazy"
            decoding="async"
            class="h-7 w-7"
          />
          <span class="text-strong text-lg font-bold tracking-tight">{siteConfig.brand.name}</span>
        </a>
        <p class="mt-2 text-sm leading-relaxed text-muted">{siteConfig.brand.tagline}</p>
        <p class="text-subtle mt-3 text-sm">Serving {siteConfig.brand.city}</p>

        <div class="mt-4 space-y-1">
          <a
            class="-mx-2 flex items-center gap-2 rounded-lg px-2 py-2.5 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
            href={telHref}
          >
            <svg
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            {siteConfig.contact.phoneDisplay}
          </a>
          <a
            class="-mx-2 flex items-center gap-2 rounded-lg px-2 py-2.5 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
            href={mailtoHref}
          >
            <svg
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            {siteConfig.contact.email}
          </a>
        </div>
      </div>

      <!-- Mobile: collapsible link groups -->
      <div class="md:hidden">
        <div class="mt-2 grid gap-3">
          <details
            class="rounded-2xl border border-brand-100/60 bg-white/70 p-4 shadow-sm backdrop-blur-sm dark:border-brand-800/30 dark:bg-slate-950/30"
          >
            <summary
              class="text-strong flex cursor-pointer list-none items-center justify-between gap-3 text-sm font-semibold"
            >
              Services
              <span class="text-subtle">+</span>
            </summary>
            <nav class="mt-3 grid gap-1" aria-label="Footer Services">
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('services/')}>Overview</a
              >
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('services/#specialty')}>Specialty + add-ons</a
              >
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('pricing/')}>Scope & Pricing</a
              >
            </nav>
          </details>

          <details
            class="rounded-2xl border border-brand-100/60 bg-white/70 p-4 shadow-sm backdrop-blur-sm dark:border-brand-800/30 dark:bg-slate-950/30"
          >
            <summary
              class="text-strong flex cursor-pointer list-none items-center justify-between gap-3 text-sm font-semibold"
            >
              Company
              <span class="text-subtle">+</span>
            </summary>
            <nav class="mt-3 grid gap-1" aria-label="Footer Company">
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('about/')}>About</a
              >
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('industries/')}>Industries</a
              >
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('resources/')}>Resources</a
              >
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('checklist/')}>Checklist</a
              >
              <a
                class="-mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-colors hover:bg-brand-50 hover:text-brand-700 dark:hover:bg-slate-900/50 dark:hover:text-brand-200"
                href={href('contact/')}>Contact</a
              >
            </nav>
          </details>

          <details
            class="rounded-2xl border border-brand-100/60 bg-white/70 p-4 shadow-sm backdrop-blur-sm dark:border-brand-800/30 dark:bg-slate-950/30"
          >
            <summary
              class="text-strong flex cursor-pointer list-none items-center justify-between gap-3 text-sm font-semibold"
            >
              Hours
              <span class="text-subtle">+</span>
            </summary>
            <ul class="mt-3 space-y-1.5 text-sm text-muted">
              {siteConfig.hours.lines.map((h) => <li>{h}</li>)}
            </ul>

            <a
              href="#top"
              class="mt-4 inline-flex w-full items-center justify-center gap-2 rounded-full border border-brand-200/60 bg-white/60 px-4 py-2.5 text-sm font-medium text-brand-700 shadow-sm backdrop-blur-sm transition-all hover:border-brand-300 hover:bg-white hover:shadow-md dark:border-brand-700/40 dark:bg-slate-800/60 dark:text-brand-300 dark:hover:bg-slate-800"
            >
              <svg
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18"
                ></path>
              </svg>
              Back to top
            </a>
          </details>
        </div>
      </div>

      <!-- Services Column -->
      <nav class="hidden space-y-3 md:block" aria-label="Footer Services">
        <p
          class="text-xs font-semibold uppercase tracking-wider text-brand-600 dark:text-brand-400"
        >
          Services
        </p>
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('services/')}>Overview</a
        >
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('services/#specialty')}>Specialty + add-ons</a
        >
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('pricing/')}>Scope & Pricing</a
        >
      </nav>

      <!-- Company Column -->
      <nav class="hidden space-y-3 md:block" aria-label="Footer Company">
        <p
          class="text-xs font-semibold uppercase tracking-wider text-brand-600 dark:text-brand-400"
        >
          Company
        </p>
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('about/')}>About</a
        >
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('industries/')}>Industries</a
        >
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('resources/')}>Resources</a
        >
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('checklist/')}>Checklist</a
        >
        <a
          class="block text-sm text-muted transition-colors hover:text-brand-600"
          href={href('contact/')}>Contact</a
        >
      </nav>

      <!-- Hours Column -->
      <div class="hidden md:block">
        <p
          class="text-xs font-semibold uppercase tracking-wider text-brand-600 dark:text-brand-400"
        >
          Hours
        </p>
        <ul class="mt-3 space-y-1.5 text-sm text-muted">
          {siteConfig.hours.lines.map((h) => <li>{h}</li>)}
        </ul>

        <a
          href="#top"
          class="mt-6 inline-flex items-center gap-2 rounded-full border border-brand-200/60 bg-white/60 px-4 py-2 text-sm font-medium text-brand-700 shadow-sm backdrop-blur-sm transition-all hover:border-brand-300 hover:bg-white hover:shadow-md dark:border-brand-700/40 dark:bg-slate-800/60 dark:text-brand-300 dark:hover:bg-slate-800"
        >
          <svg
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18"
            ></path>
          </svg>
          Back to top
        </a>
      </div>
    </div>

    <div
      class="mt-8 flex flex-col gap-3 border-t border-brand-100/50 pt-5 dark:border-brand-800/30 sm:mt-9 sm:flex-row sm:items-center sm:justify-between sm:gap-4 sm:pt-6"
    >
      <p class="text-subtle text-xs">
        © {new Date().getFullYear()}
        {siteConfig.brand.name}. All rights reserved.
      </p>
      <p class="text-subtle text-xs">Bay Area • 37.77°N • 122.42°W</p>
      <p class="text-subtle text-xs">Checklist-driven service. Clear scope. Consistent results.</p>
    </div>
  </div>
</footer>
