---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import Gallery from '@/components/Gallery.astro';
import ContactSection from '@/components/Contact.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Results | ${siteConfig.brand.name}`;
const description =
  'A closer look at recent work across offices and commercial spaces. Clear scope, consistent delivery, and clean results.';

const base = import.meta.env.BASE_URL;
const contactHref = `${base}contact/`;
const servicesHref = `${base}services/`;
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Results"
    description="A closer look at recent work across offices and commercial spaces—focused on consistency, communication, and a checklist-based scope."
  />

  <Gallery
    id="gallery"
    heading="Recent results"
    description="Photos and examples of the spaces we support. Swap in your own images to showcase your best work."
    showTip={false}
    ctaHref={contactHref}
    ctaLabel="Request a walkthrough"
  />

  <section class="section section-muted">
    <div class="container-page">
      <div
        class="relative overflow-hidden rounded-3xl bg-brand-900 px-6 py-16 shadow-2xl sm:px-16 md:pt-24 lg:flex lg:gap-x-20 lg:px-24 lg:pt-0"
      >
        <div class="mx-auto max-w-md text-center lg:mx-0 lg:flex-auto lg:py-32 lg:text-left">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
            Want results like these?
          </h2>
          <p class="mt-6 text-lg leading-8 text-brand-100">
            Tell us your space, access window, and frequency. We’ll confirm scope and send a clear
            quote.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6 lg:justify-start">
            <a
              href={contactHref}
              class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-brand-900 shadow-sm hover:bg-brand-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
            >
              Request a quote
            </a>
            <a href={servicesHref} class="text-sm font-semibold leading-6 text-white">
              Browse services <span aria-hidden="true">→</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <ContactSection id="quote" heading="Request a quote" />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
