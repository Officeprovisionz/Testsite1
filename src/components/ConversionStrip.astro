---
import CTASection from '@/components/CTASection.astro';

type Props = {
  id?: string;
  eyebrow?: string;
  heading?: string;
  description?: string;
  /**
   * `muted` blends with the dotted section background.
   * `surface` uses the default page surface.
   */
  tone?: 'muted' | 'surface';
  showChecklist?: boolean;
  showEmail?: boolean;
};

const { id, eyebrow, heading, description, tone, showChecklist, showEmail } = Astro.props;
---

<CTASection
  layout="split"
  id={id}
  eyebrow={eyebrow}
  heading={heading}
  description={description}
  tone={tone}
  showChecklist={showChecklist}
  showEmail={showEmail}
/>
