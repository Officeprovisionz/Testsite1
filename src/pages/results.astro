---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import PageHeader from '@/components/PageHeader.astro';
import Gallery from '@/components/Gallery.astro';
import ContactSection from '@/components/Contact.astro';
import WaveDivider from '@/components/WaveDivider.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Results | ${siteConfig.brand.name}`;
const description =
  'A closer look at recent work across offices and commercial spaces. Clear scope, consistent delivery, and clean results.';

const base = import.meta.env.BASE_URL;
const contactHref = `${base}contact/`;
const servicesHref = `${base}services/`;
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeader
    title="Results"
    description="A closer look at recent work across offices and commercial spaces—focused on consistency, communication, and a checklist-based scope."
    align="center"
  />

  <section class="section section-creative pb-0">
    <div class="container-page relative">
      <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 -top-14 -z-10">
        <div class="mx-auto h-72 w-[min(74rem,96vw)] rounded-full bg-brand-500/10 blur-3xl"></div>
      </div>

      <div class="grid gap-6 lg:grid-cols-12 lg:items-stretch">
        <div class="glass-card relative overflow-hidden p-7 sm:p-9 lg:col-span-7">
          <div
            aria-hidden="true"
            class="from-brand-200/18 to-brand-300/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
          >
          </div>
          <div class="relative">
            <p class="eyebrow">Before / after • Real workplaces</p>
            <h2 class="heading-2 mt-2">Clean results you can count on</h2>
            <p class="lede">
              These are examples of typical commercial spaces we support. Every job starts with a
              confirmed scope and a checklist—so results stay consistent over time.
            </p>

            <div class="mt-7 flex flex-col gap-3 sm:flex-row">
              <a class="btn-primary" href="#gallery">View the gallery</a>
              <a class="btn-secondary" href="#quote">Request a quote</a>
              <a class="btn-secondary" href={servicesHref}>Browse services</a>
            </div>
          </div>
        </div>

        <div class="grid gap-6 lg:col-span-5">
          <div class="glass-panel relative overflow-hidden p-6">
            <div
              aria-hidden="true"
              class="from-brand-200/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent to-brand-300/10"
            >
            </div>
            <div class="relative">
              <p class="text-strong text-sm font-semibold">Common focus areas</p>
              <ul class="text-muted mt-3 grid gap-2 text-sm">
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                  ></span>
                  <span>Restrooms + high-touch disinfecting</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                  ></span>
                  <span>Breakrooms / kitchens</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                  ></span>
                  <span>Conference rooms + shared spaces</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="glass-panel relative overflow-hidden p-6">
            <div
              aria-hidden="true"
              class="from-brand-200/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent to-brand-300/10"
            >
            </div>
            <div class="relative">
              <p class="text-strong text-sm font-semibold">Want a walkthrough?</p>
              <p class="text-muted mt-2 text-sm">
                Share your address, square footage estimate, and preferred schedule—we’ll confirm
                scope and send a clear quote.
              </p>
              <div class="mt-4">
                <a class="link text-sm" href={contactHref}>Request a walkthrough →</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="relative -mb-px mt-12">
      <WaveDivider tone="bg" class="absolute bottom-0 left-0 right-0" />
    </div>
  </section>

  <Gallery
    id="gallery"
    heading="Recent results"
    description="Photos and examples of the spaces we support. Swap in your own images to showcase your best work."
    showTip={false}
    ctaHref={contactHref}
    ctaLabel="Request a walkthrough"
  />

  <section class="section section-muted section-creative">
    <div class="container-page">
      <div class="glass-card relative overflow-hidden p-7 sm:p-8">
        <div
          aria-hidden="true"
          class="from-brand-200/16 to-brand-300/12 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
        >
        </div>
        <div class="relative">
          <h2 class="heading-2">Want results like these—on a reliable schedule?</h2>
          <p class="lede">
            Tell us your space, access window, and frequency. We’ll confirm scope and send a clear
            quote.
          </p>
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <a class="btn-primary" href={contactHref}>Request a quote</a>
            <a class="btn-secondary" href={servicesHref}>Browse services</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <ContactSection id="quote" heading="Request a quote" />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
