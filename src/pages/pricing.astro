---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import PageHeader from '@/components/PageHeader.astro';
import PricingSection from '@/components/Pricing.astro';
import FAQ from '@/components/FAQ.astro';
import ContactSection from '@/components/Contact.astro';
import WaveDivider from '@/components/WaveDivider.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Pricing | ${siteConfig.brand.name}`;
const description =
  'How commercial cleaning pricing works: frequency, square footage, access, and add-ons. Get a clear scope and quote before service.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeader
    title="Pricing"
    description="We price based on scope—not surprises. Share your space and schedule and we’ll send a clear quote before service."
  />

  <section class="section section-creative pb-0">
    <div class="container-page relative">
      <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 -top-14 -z-10">
        <div class="mx-auto h-72 w-[min(74rem,96vw)] rounded-full bg-brand-500/10 blur-3xl"></div>
      </div>

      <div class="grid gap-6 lg:grid-cols-12 lg:items-stretch">
        <div class="glass-card relative overflow-hidden p-7 sm:p-9 lg:col-span-7">
          <div
            aria-hidden="true"
            class="from-brand-200/18 to-brand-300/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
          >
          </div>
          <div class="relative">
            <p class="eyebrow">Clear scope • Predictable pricing</p>
            <h2 class="heading-2 mt-2">How pricing works</h2>
            <p class="lede">
              Pricing depends on your space and service frequency. We confirm scope first—then send
              a clear, written quote.
            </p>

            <div class="mt-7 grid gap-5 sm:grid-cols-2">
              <div class="glass rounded-2xl border p-5">
                <p class="text-strong text-sm font-semibold">What affects the price</p>
                <ul class="text-muted mt-3 grid gap-2 text-sm">
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                      aria-hidden="true"></span>
                    <span>Square footage + layout complexity</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                      aria-hidden="true"></span>
                    <span>Frequency (one-time vs recurring)</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                      aria-hidden="true"></span>
                    <span>Access window (after-hours/weekends)</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                      aria-hidden="true"></span>
                    <span>Add-ons (restocking, floor care, windows)</span>
                  </li>
                </ul>
              </div>

              <div class="glass rounded-2xl border p-5">
                <p class="text-strong text-sm font-semibold">What you get</p>
                <ul class="text-muted mt-3 grid gap-2 text-sm">
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                      aria-hidden="true"></span>
                    <span>Checklist-based scope (no guesswork)</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                      aria-hidden="true"></span>
                    <span>Simple add-ons you can request anytime</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                      aria-hidden="true"></span>
                    <span>Follow-up support if anything needs attention</span>
                  </li>
                </ul>
              </div>
            </div>

            <div class="mt-7 flex flex-col gap-3 sm:flex-row">
              <a class="btn-primary" href="#plans">See typical plans</a>
              <a class="btn-secondary" href="#quote">Get a quote</a>
            </div>
          </div>
        </div>

        <div class="grid gap-6 lg:col-span-5">
          <div class="glass-panel relative overflow-hidden p-6">
            <div
              aria-hidden="true"
              class="from-brand-200/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent to-brand-300/10"
            >
            </div>
            <div class="relative">
              <p class="text-strong text-sm font-semibold">Want the fastest quote?</p>
              <p class="text-muted mt-2 text-sm">
                Include square footage (or estimate), cleaning frequency, access window, and any
                focus areas like restrooms, kitchens, or conference rooms.
              </p>
            </div>
          </div>

          <div class="glass-panel relative overflow-hidden p-6">
            <div
              aria-hidden="true"
              class="from-brand-200/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent to-brand-300/10"
            >
            </div>
            <div class="relative">
              <p class="text-strong text-sm font-semibold">Need something custom?</p>
              <p class="text-muted mt-2 text-sm">
                Day porter coverage, floor programs, or multi-site scope—no problem. We’ll tailor
                the checklist and schedule.
              </p>
              <div class="mt-4">
                <a class="link text-sm" href={`${import.meta.env.BASE_URL}contact/`}
                  >Request a walkthrough →</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="relative -mb-px mt-12">
      <WaveDivider tone="surface-muted" class="absolute bottom-0 left-0 right-0" />
    </div>
  </section>

  <PricingSection id="plans" heading="Typical plans" />

  <FAQ />

  <ContactSection id="quote" heading="Get a quote" />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
