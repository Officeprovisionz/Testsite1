---
import { siteConfig } from '@/data/siteConfig';
---

<section id="services" class="section scroll-mt-20">
  <div class="container-page">
    <div class="flex items-end justify-between gap-4">
      <div>
        <h2 class="text-3xl font-extrabold tracking-tight text-slate-900">Services</h2>
        <p class="mt-2 max-w-prose text-slate-700">
          Choose the clean you need—then we’ll confirm scope and provide a clear quote.
        </p>
      </div>
      <a class="btn-secondary hidden sm:inline-flex" href="#contact">Request a quote</a>
    </div>

    <div class="mt-8 grid gap-5 md:grid-cols-2">
      {
        siteConfig.services.map((s) => (
          <article class="card p-6">
            <h3 class="text-lg font-bold text-slate-900">{s.title}</h3>
            <p class="mt-2 text-sm text-slate-700">{s.description}</p>
            <ul class="mt-4 grid gap-2 text-sm text-slate-700">
              {s.bullets.map((b) => (
                <li class="flex gap-2">
                  <span
                    class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                    aria-hidden="true"
                  />
                  <span>{b}</span>
                </li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>
  </div>
</section>
