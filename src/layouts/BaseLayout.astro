---
import '@/styles/global.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/playfair-display/600.css';
import '@fontsource/playfair-display/700.css';
import { siteConfig } from '@/data/siteConfig';

type Props = {
  title?: string;
  description?: string;
};

const { title = siteConfig.seo.title, description = siteConfig.seo.description } = Astro.props;

const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const ogPath = `${import.meta.env.BASE_URL}og-image.svg`;
const ogUrl = Astro.site ? new URL(ogPath, Astro.site).toString() : ogPath;
const faviconHref = `${import.meta.env.BASE_URL}favicon.svg`;

const jsonLd = (() => {
  const [localityRaw, regionRaw] = siteConfig.brand.city.split(',').map((s) => s.trim());
  const addressLocality = localityRaw || undefined;
  const addressRegion = regionRaw || undefined;
  const url = Astro.site ? new URL(import.meta.env.BASE_URL, Astro.site).toString() : undefined;

  const data = {
    '@context': 'https://schema.org',
    '@type': 'LocalBusiness',
    name: siteConfig.brand.name,
    description: siteConfig.seo.description,
    url,
    telephone: siteConfig.contact.phoneE164,
    email: siteConfig.contact.email,
    address: {
      '@type': 'PostalAddress',
      addressLocality,
      addressRegion,
      addressCountry: 'US',
    },
    areaServed: siteConfig.areasServed.items,
  };

  // Prevent accidental "</script>" injection via safe escaping.
  return JSON.stringify(data).replace(/</g, '\\u003c');
})();
---

<!doctype html>
<html lang="en" data-theme="navy" data-mode="auto">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content={siteConfig.seo.themeColor}
    />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#020617" />

    <script is:inline>
      (() => {
        try {
          const savedMode = localStorage.getItem('mode');
          if (savedMode === 'light' || savedMode === 'dark' || savedMode === 'auto') {
            document.documentElement.dataset.mode = savedMode;
          }
          const saved = localStorage.getItem('theme');
          if (saved) document.documentElement.dataset.theme = saved;
        } catch {
          // ignore
        }
      })();
    </script>

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <link rel="icon" type="image/svg+xml" href={faviconHref} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    <meta property="og:image" content={ogUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogUrl} />

    <script type="application/ld+json" is:inline set:html={jsonLd} />

    {/* Analytics placeholder (vendor-neutral): add your script here if desired. */}
  </head>
  <body>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-xl focus:bg-white focus:px-4 focus:py-2 focus:shadow-soft"
    >
      Skip to content
    </a>

    <slot name="header" />

    <main id="main-content" class="pb-24 md:pb-0">
      <slot />
    </main>

    <slot name="footer" />
    <slot name="sticky" />
  </body>
</html>
