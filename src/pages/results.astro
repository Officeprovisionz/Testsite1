---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import Gallery from '@/components/Gallery.astro';
import TrustBar from '@/components/TrustBar.astro';
import QualityPromise from '@/components/QualityPromise.astro';
import ConversionStrip from '@/components/ConversionStrip.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Results | ${siteConfig.brand.name}`;
const description =
  'A closer look at recent work across offices and commercial spaces. Clear scope, consistent delivery, and clean results.';

const base = import.meta.env.BASE_URL;
const contactHref = `${base}contact/`;
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Results"
    description="A closer look at recent work across offices and commercial spaces—focused on consistency, communication, and a checklist-based scope."
  />

  <TrustBar />

  <Gallery
    id="gallery"
    heading="Recent results"
    description="Photos and examples of the spaces we support. Swap in your own images to showcase your best work."
    showTip={false}
    ctaHref={contactHref}
    ctaLabel="Request a walkthrough"
  />

  <QualityPromise
    id="quality"
    heading="Reliable results, not surprises"
    description="Every visit follows a written scope and checklist—with fast follow-up if anything needs attention."
    showWave={false}
  />

  <ConversionStrip id="quote" tone="muted" eyebrow="Next step" heading="Want results like these?" />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
