---
import { siteConfig } from '@/data/siteConfig';

type Props = {
  id?: string;
  heading?: string;
  description?: string;
  ctaHref?: string;
  ctaLabel?: string;
};

const {
  id,
  heading = 'Pricing',
  description = siteConfig.pricing.note,
  ctaHref,
  ctaLabel = 'Get a quote',
} = Astro.props;

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
const cta = ctaHref ?? href('contact/');
---

<section id={id} class="section scroll-mt-20 bg-slate-50">
  <div class="container-page">
    <h2 class="heading-2">{heading}</h2>
    <p class="lede">{description}</p>

    <div class="mt-8 grid gap-5 lg:grid-cols-3">
      {
        siteConfig.pricing.tiers.map((t) => (
          <div class="card p-6">
            <div class="flex items-baseline justify-between gap-4">
              <h3 class="text-lg font-bold text-slate-900">{t.name}</h3>
              <p class="text-sm font-semibold text-brand-700">Starting at {t.startingAt}</p>
            </div>
            <p class="mt-2 text-sm text-slate-700">Best for: {t.bestFor}</p>
            <ul class="mt-4 grid gap-2 text-sm text-slate-700">
              {t.includes.map((i) => (
                <li class="flex gap-2">
                  <span
                    class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                    aria-hidden="true"
                  />
                  <span>{i}</span>
                </li>
              ))}
            </ul>
            {t.disclaimer && <p class="mt-4 text-xs text-slate-600">{t.disclaimer}</p>}
            <div class="mt-6">
              <a class="btn-primary w-full" href={cta}>
                {ctaLabel}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
