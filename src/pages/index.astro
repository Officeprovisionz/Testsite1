---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import TrustBar from '@/components/TrustBar.astro';
import Services from '@/components/Services.astro';
import Testimonials from '@/components/Testimonials.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import Footer from '@/components/Footer.astro';
import { siteConfig } from '@/data/siteConfig';

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
const telHref = `tel:${siteConfig.contact.phoneE164}`;
---

<BaseLayout>
  <Header slot="header" />
  <Hero />
  <TrustBar />
  <Services
    heading="Popular services"
    description="Professional cleaning options for homes and small businesses."
    limit={3}
    ctaHref={href('services/')}
    ctaLabel="View all services"
  />

  <Testimonials />

  <section class="section bg-slate-50">
    <div class="container-page">
      <div class="card p-7 sm:p-8">
        <div class="grid gap-6 md:grid-cols-2 md:items-center">
          <div>
            <h2 class="text-2xl font-extrabold tracking-tight text-slate-900">Get a quote today</h2>
            <p class="mt-2 max-w-prose text-slate-700">
              Tell us what you need and when. Weâ€™ll confirm scope and send a clear quote.
            </p>
          </div>
          <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
            <a class="btn-primary" href={href('contact/')}>Request a quote</a>
            <a class="btn-secondary" href={telHref}>Call/Text</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
