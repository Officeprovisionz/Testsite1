---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import { HeroPro } from '@/components/HeroPro';
import { FeatureTilesPro } from '@/components/FeatureTilesPro';
import { HowItWorksPro } from '@/components/HowItWorksPro';
import { ServicesPro } from '@/components/ServicesPro';
import Gallery from '@/components/Gallery.astro';
import Testimonials from '@/components/Testimonials.astro';
import FAQ from '@/components/FAQ.astro';
import ConversionStrip from '@/components/ConversionStrip.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import Footer from '@/components/Footer.astro';
import { makeHref } from '@/lib/nav';

const base = import.meta.env.BASE_URL;
const href = makeHref(base);
---

<BaseLayout>
  <Header slot="header" transparent={true} />
  <HeroPro client:load />

  <FeatureTilesPro client:visible />

  <HowItWorksPro client:visible />

  <ServicesPro client:visible />

  <Gallery
    id="results"
    heading="Results preview"
    description="A preview of recent work across offices and commercial spacesâ€”focused on consistency and clear scope."
    showTip={false}
    ctaHref={href('results/')}
    ctaLabel="View all results"
  />

  <Testimonials id="testimonials" />

  <FAQ />

  <ConversionStrip
    id="quote"
    tone="muted"
    eyebrow="Next step"
    heading="Ready to request a walkthrough?"
  />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
