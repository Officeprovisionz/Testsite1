---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { ServicesPro } from '@/components/ServicesPro';
import ServicesSection from '@/components/Services.astro';
import AreasServed from '@/components/AreasServed.astro';
import FAQ from '@/components/FAQ.astro';
import TrustBar from '@/components/TrustBar.astro';
import { siteConfig } from '@/data/siteConfig';
import { getCollection } from 'astro:content';

const title = `Services | ${siteConfig.brand.name}`;
const description =
  'Office cleaning, janitorial services, supplies/restocking, and facilities supportâ€”built for busy teams in San Francisco.';

const allServices = await getCollection('services');
const specialtyServices = allServices
  .filter((s) => s.data.category === 'specialty')
  .map((s) => s.data);
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Services"
    description="From recurring janitorial to restocking and facilities supportâ€”scoped clearly and delivered consistently. We confirm scope before the job."
  />

  <TrustBar />

  <ServicesPro client:visible />

  <ServicesSection
    id="specialty"
    heading="Specialty + add-on services"
    description="Popular add-ons we can scope and schedule based on your space and building requirements."
    items={specialtyServices}
  />

  <AreasServed />

  <FAQ showWave={false} />

  <Footer slot="footer" />
</BaseLayout>
