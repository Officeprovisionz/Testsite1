---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import { HeroPro } from '@/components/HeroPro';
import { FeatureTilesPro } from '@/components/FeatureTilesPro';
import { ClientLogos } from '@/components/ClientLogos';
import { FeatureBannerPro } from '@/components/FeatureBannerPro';
import { IndustriesPro } from '@/components/IndustriesPro';
import { HowItWorksPro } from '@/components/HowItWorksPro';
import { ServicesPro } from '@/components/ServicesPro';
import Scope from '@/components/Scope.astro';
import Gallery from '@/components/Gallery.astro';
import FAQ from '@/components/FAQ.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import Footer from '@/components/Footer.astro';
import { siteConfig } from '@/data/siteConfig';

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
const telHref = `tel:${siteConfig.contact.phoneE164}`;
---

<BaseLayout>
  <Header slot="header" transparent={true} />
  <HeroPro client:load />

  <FeatureTilesPro client:visible />

  <div class="bg-slate-50 py-12 dark:bg-slate-950">
    <ClientLogos client:visible />
  </div>

  <FeatureBannerPro client:visible />

  <IndustriesPro client:visible />

  <HowItWorksPro client:visible />

  <ServicesPro client:visible />

  <Gallery
    id="results"
    heading="Results preview"
    description="A preview of recent work across offices and commercial spaces—focused on consistency and clear scope."
    showTip={false}
    ctaHref={href('results/')}
    ctaLabel="View all results"
  />

  <Scope
    id="scope"
    heading="Scope (how it works)"
    ctaHref={href('contact/')}
    ctaLabel="Request a walkthrough"
  />

  <FAQ />

  <section class="section section-muted section-creative" id="quote">
    <div class="container-page">
      <div class="glass-card relative overflow-hidden p-7 sm:p-9">
        <div
          aria-hidden="true"
          class="from-brand-200/16 to-brand-300/12 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
        >
        </div>
        <div class="relative">
          <div class="grid gap-8 md:grid-cols-2 md:items-center">
            <div>
              <p class="eyebrow">Request a walkthrough</p>
              <h2 class="heading-2 mt-2">Request a walkthrough</h2>
              <p class="lede">
                Tell us your space, frequency, and access. We’ll confirm scope and send a clear
                quote.
              </p>
              <ul class="text-subtle mt-5 grid gap-2 text-sm sm:grid-cols-2">
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                  ></span>
                  <span>Checklist-based scope</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                  ></span>
                  <span>Clear written scope</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                  ></span>
                  <span>After-hours available</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                  ></span>
                  <span>References available on request</span>
                </li>
              </ul>
            </div>

            <div class="flex flex-col gap-3 sm:flex-row md:justify-end">
              <a class="btn-primary" href={href('contact/')}>Request a walkthrough</a>
              <a class="btn-secondary" href={telHref}>Call/Text {siteConfig.contact.phoneDisplay}</a
              >
            </div>

            <a
              class="text-muted mt-4 inline-flex w-fit items-center gap-2 text-sm underline decoration-brand-300/50 underline-offset-4 hover:text-brand-600 dark:hover:text-brand-300"
              href={href('checklist/')}
            >
              Preview the checklist
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
