---
import CTASection from '@/components/CTASection.astro';

type Props = {
  heading?: string;
  description?: string;
  /**
   * @deprecated `CTASection` no longer renders CTA buttons from these props.
   * Kept only for backwards-compat with older usages.
   */
  ctaText?: string;
  /**
   * @deprecated `CTASection` no longer renders CTA buttons from these props.
   * Kept only for backwards-compat with older usages.
   */
  ctaHref?: string;
  variant?: 'default' | 'accent';
};

const { heading, description, variant = 'default' } = Astro.props as Props;
---

<CTASection layout="centered" background={variant} heading={heading} description={description} />
