---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import TrustBar from '@/components/TrustBar.astro';
import Services from '@/components/Services.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import Footer from '@/components/Footer.astro';
import { siteConfig } from '@/data/siteConfig';

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
const telHref = `tel:${siteConfig.contact.phoneE164}`;
---

<BaseLayout>
  <Header slot="header" />
  <Hero />
  <TrustBar />
  <Services
    heading="Popular services"
    description="Office cleaning, supplies/restocking, and facilities support—built for busy teams."
    limit={3}
    ctaHref={href('services/')}
    ctaLabel="View all services"
  />

  <section class="section section-muted section-creative">
    <div class="container-page">
      <div class="panel panel-muted border-app overflow-hidden border p-7 sm:p-8">
        <div class="grid gap-8 md:grid-cols-2 md:items-center">
          <div>
            <p class="eyebrow">Quick, clear, professional</p>
            <h2 class="heading-2 mt-2">Get a quote today</h2>
            <p class="lede">
              Tell us what you need and when. We’ll confirm scope and send a clear quote.
            </p>
            <ul class="text-subtle mt-5 grid gap-2 text-sm sm:grid-cols-2">
              <li class="flex items-start gap-2">
                <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                ></span>
                <span>Checklist-based scope</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                ></span>
                <span>Upfront pricing</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                ></span>
                <span>Flexible scheduling</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600" aria-hidden="true"
                ></span>
                <span>Supplies/restocking available</span>
              </li>
            </ul>
          </div>

          <div class="flex flex-col gap-3 sm:flex-row md:justify-end">
            <a class="btn-primary" href={href('contact/')}>Request a quote</a>
            <a class="btn-secondary" href={telHref}>Call/Text {siteConfig.contact.phoneDisplay}</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
