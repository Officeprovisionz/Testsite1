---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { PricingPro } from '@/components/PricingPro';
import PricingSection from '@/components/Pricing.astro';
import FAQ from '@/components/FAQ.astro';
import ContactSection from '@/components/Contact.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Pricing | ${siteConfig.brand.name}`;
const description =
  'How commercial cleaning pricing works: frequency, square footage, access, and add-ons. Get a clear scope and quote before service.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Pricing"
    description="We price based on scope—not surprises. Share your space and schedule and we’ll send a clear quote before service."
  />

  <section class="section pb-0">
    <div class="container-page">
      <div class="mb-12 text-center">
        <h2 class="heading-2">How pricing works</h2>
        <p class="text-muted mx-auto mt-4 max-w-2xl text-lg">
          Pricing depends on your space and service frequency. We confirm scope first—then send a
          clear, written quote.
        </p>
      </div>

      <PricingPro client:visible />
    </div>
  </section>

  <PricingSection id="plans" heading="Typical plans" />

  <FAQ />

  <ContactSection id="quote" heading="Get a quote" />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
