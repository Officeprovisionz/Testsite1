---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { ProcessStepsPro } from '@/components/ProcessStepsPro';
import AreasServed from '@/components/AreasServed.astro';
import ConversionStrip from '@/components/ConversionStrip.astro';
import Gallery from '@/components/Gallery.astro';
import SectionHeader from '@/components/ui/SectionHeader.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `About | ${siteConfig.brand.name}`;
const description =
  'Commercial-grade cleaning focused on clear communication, consistent checklists, and respectful service.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="A cleaner workspace, a simpler workday"
    description="We’re built for reliability: clear communication, consistent checklists, and a team that respects your space."
  />

  <section class="section section-creative scroll-mt-20 pb-0" id="how-we-work">
    <div class="container-page">
      <div class="mb-12">
        <SectionHeader
          align="center"
          eyebrow="Process"
          heading="How we work"
          description="Great cleaning is a process. We confirm scope, follow a checklist, and keep you in the loop—so you always know what to expect."
        />
      </div>

      <ProcessStepsPro client:visible />
    </div>
  </section>

  <section class="section section-muted section-creative scroll-mt-20" id="expect">
    <div class="container-page">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <h2 class="heading-2">What to expect</h2>
          <p class="mt-4 text-lg text-muted">
            We don't just clean; we communicate. From the first walkthrough to the daily checklist,
            everything is designed to be clear and consistent.
          </p>
          <ul class="check-list">
            <li>
              <span class="check-icon" aria-hidden="true">✓</span>
              <span class="text-strong">Consistent crews who know your space</span>
            </li>
            <li>
              <span class="check-icon" aria-hidden="true">✓</span>
              <span class="text-strong">Real-time reporting and issue flagging</span>
            </li>
            <li>
              <span class="check-icon" aria-hidden="true">✓</span>
              <span class="text-strong">Flexible scheduling to fit your operations</span>
            </li>
          </ul>
        </div>
        <div class="glass-panel card-hover relative overflow-hidden p-6 sm:p-8">
          <div
            aria-hidden="true"
            class="from-brand-200/16 to-brand-300/12 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
          >
          </div>
          <div class="relative">
            <p class="eyebrow">Our commitments</p>
            <h3 class="heading-3 mt-2">Consistency you can count on</h3>
            <p class="mt-3 text-sm text-muted">
              The details vary by space, but our process stays the same—clear scope, checklist
              delivery, and fast follow-up.
            </p>

            <div class="mt-6 grid gap-4 sm:grid-cols-2">
              <div class="panel panel-muted p-4">
                <p class="text-strong text-sm font-semibold">Clear scope</p>
                <p class="mt-1 text-sm text-muted">Written checklist + agreed add-ons.</p>
              </div>
              <div class="panel panel-muted p-4">
                <p class="text-strong text-sm font-semibold">Follow-through</p>
                <p class="mt-1 text-sm text-muted">Issues flagged + resolved promptly.</p>
              </div>
            </div>

            <p class="text-subtle mt-4 text-xs">
              Want more detail? Ask for a sample checklist during your walkthrough.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-creative scroll-mt-20" id="values">
    <div class="container-page">
      <SectionHeader
        eyebrow="Values"
        heading="Built for consistency (and a calmer workday)"
        description="We keep the experience simple: clear scope, predictable service, and communication that doesn’t disappear after the first visit."
      />

      <div class="mt-10 grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
        <div class="glass-panel card-hover p-6">
          <p class="text-strong text-sm font-semibold">Communication-first</p>
          <p class="mt-2 text-sm leading-relaxed text-muted">
            You’ll know what’s happening—arrival, issues, and follow-ups—without chasing anyone
            down.
          </p>
        </div>
        <div class="glass-panel card-hover p-6">
          <p class="text-strong text-sm font-semibold">Respect for the space</p>
          <p class="mt-2 text-sm leading-relaxed text-muted">
            We work around your operations and treat offices, medical suites, and shared areas with
            care.
          </p>
        </div>
        <div class="glass-panel card-hover p-6">
          <p class="text-strong text-sm font-semibold">Flexible scheduling</p>
          <p class="mt-2 text-sm leading-relaxed text-muted">
            After-hours and weekend options where available—so cleaning fits your flow, not the
            other way around.
          </p>
        </div>
      </div>
    </div>
  </section>

  <AreasServed />

  <Gallery
    id="proof"
    heading="Recent results"
    description="A quick look at the spaces we support. Real work, consistent checklists, and clean results."
    showTip={false}
  />

  <ConversionStrip
    id="quote"
    tone="muted"
    eyebrow="Get started"
    heading="Want a walkthrough this week?"
    description="Request a quote, call/text, or preview our checklist. We’ll confirm scope and send a clear written quote."
  />

  <Footer slot="footer" />
</BaseLayout>
