---
import '@/styles/global.css';
import { siteConfig } from '@/data/siteConfig';

type Props = {
  title?: string;
  description?: string;
};

const { title = siteConfig.seo.title, description = siteConfig.seo.description } = Astro.props;

const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const ogPath = `${import.meta.env.BASE_URL}og-image.svg`;
const ogUrl = Astro.site ? new URL(ogPath, Astro.site).toString() : ogPath;
const faviconHref = `${import.meta.env.BASE_URL}favicon.svg`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="theme-color" content={siteConfig.seo.themeColor} />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <link rel="icon" type="image/svg+xml" href={faviconHref} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    <meta property="og:image" content={ogUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogUrl} />

    {/* Analytics placeholder (vendor-neutral): add your script here if desired. */}
  </head>
  <body>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-xl focus:bg-white focus:px-4 focus:py-2 focus:shadow-soft"
    >
      Skip to content
    </a>

    <slot name="header" />

    <main id="main-content">
      <slot />
    </main>

    <slot name="footer" />
    <slot name="sticky" />
  </body>
</html>
