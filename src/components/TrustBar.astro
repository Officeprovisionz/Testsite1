---
import { siteConfig } from '@/data/siteConfig';
---

<section class="section-creative surface border-app border-b">
  <div class="container-page relative py-10">
    <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 -top-12">
      <div class="bg-brand-400/14 mx-auto h-56 w-[min(64rem,92vw)] rounded-full blur-3xl"></div>
    </div>

    <div class="grid gap-4 sm:grid-cols-3">
      {
        siteConfig.trustBadges.map((b) => (
          <div class="glass-panel relative overflow-hidden p-5">
            <div
              aria-hidden="true"
              class="from-brand-200/18 to-brand-300/14 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
            />
            <div class="flex items-start gap-4">
              <span
                class="mt-0.5 inline-flex h-10 w-10 items-center justify-center rounded-2xl bg-brand-900 text-white shadow-md shadow-brand-900/15 ring-1 ring-white/10"
                aria-hidden="true"
              >
                âœ“
              </span>
              <div class="relative min-w-0">
                <p class="text-strong text-sm font-semibold">{b.title}</p>
                <p class="mt-1 text-sm leading-relaxed text-muted">{b.description}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
