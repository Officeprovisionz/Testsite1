---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import PageHeader from '@/components/PageHeader.astro';
import ContactSection from '@/components/Contact.astro';
import TrustBar from '@/components/TrustBar.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Contact | ${siteConfig.brand.name}`;
const description = 'Request a quote or ask a question. We respond quickly during business hours.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeader
    title="Contact"
    description="Request a quote or ask a question. Weâ€™ll confirm scope, timing, and pricing before service."
  />

  <TrustBar />

  <ContactSection heading="Request a quote" />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
