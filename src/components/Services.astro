---
import { siteConfig } from '@/data/siteConfig';
import type { Service } from '@/data/siteConfig';

type Props = {
  id?: string;
  heading?: string;
  description?: string;
  limit?: number;
  items?: Service[];
  ctaHref?: string;
  ctaLabel?: string;
};

const {
  id,
  heading = 'Services',
  description = 'Pick a service. We’ll confirm scope and provide a clear quote.',
  limit,
  items: itemsOverride,
  ctaHref,
  ctaLabel = 'Request a quote',
} = Astro.props;

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;

const source = itemsOverride ?? siteConfig.services;
const items = typeof limit === 'number' ? source.slice(0, limit) : source;
const cta = ctaHref ?? href('contact/');
---

<section id={id} class="section scroll-mt-20">
  <div class="container-page">
    <div class="flex items-end justify-between gap-4">
      <div>
        <h2 class="text-3xl font-extrabold tracking-tight text-slate-900">{heading}</h2>
        <p class="mt-2 max-w-prose text-slate-700">{description}</p>
      </div>
      <a class="btn-secondary hidden sm:inline-flex" href={cta}>
        {ctaLabel}
      </a>
    </div>

    <div class="mt-8 grid gap-5 md:grid-cols-2">
      {
        items.map((s) => (
          <article class="card card-hover p-6">
            <h3 class="text-lg font-bold text-slate-900">{s.title}</h3>
            <p class="mt-2 text-sm text-slate-700">{s.description}</p>
            <ul class="mt-4 grid gap-2 text-sm text-slate-700">
              {s.bullets.map((b) => (
                <li class="flex gap-2">
                  <span
                    class="mt-0.5 inline-flex h-5 w-5 flex-none items-center justify-center rounded-lg bg-brand-600 text-[10px] font-bold text-white"
                    aria-hidden="true"
                  >
                    ✓
                  </span>
                  <span>{b}</span>
                </li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>

    <div class="mt-8 sm:hidden">
      <a class="btn-secondary w-full" href={cta}>
        {ctaLabel}
      </a>
    </div>
  </div>
</section>
