---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import PageHeader from '@/components/PageHeader.astro';
import TrustBar from '@/components/TrustBar.astro';
import AreasServed from '@/components/AreasServed.astro';
import Gallery from '@/components/Gallery.astro';
import SectionNav from '@/components/SectionNav.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `About | ${siteConfig.brand.name}`;
const description =
  'Commercial-grade cleaning focused on clear communication, consistent checklists, and respectful service.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeader
    title="A cleaner workspace, a simpler workday"
    description="We’re built for reliability: clear communication, consistent checklists, and a team that respects your space."
  />

  <TrustBar />

  <SectionNav
    items={[
      { id: 'how-we-work', label: 'How' },
      { id: 'expect', label: 'Expect' },
      { id: 'gallery', label: 'Gallery' },
      { id: 'quote', label: 'Quote' },
    ]}
    ariaLabel="About sections"
  />

  <section class="section section-creative">
    <div class="container-page">
      <div class="grid gap-8 lg:grid-cols-2 lg:items-start">
        <div id="how-we-work" class="scroll-mt-24">
          <h2 class="heading-2">How we work</h2>
          <p class="text-muted mt-3 max-w-prose leading-relaxed sm:text-lg">
            Great cleaning is a process. We confirm scope, follow a checklist, and keep you in the
            loop—so you always know what to expect.
          </p>

          <ol class="border-app mt-6 grid gap-4 border-l pl-6">
            <li class="relative">
              <div
                class="absolute -left-3 top-4 flex h-7 w-7 items-center justify-center rounded-full bg-brand-600 text-xs font-semibold text-white"
                aria-hidden="true"
              >
                1
              </div>
              <div class="panel border-app overflow-hidden border p-5">
                <p class="text-strong text-sm font-semibold">Quote + scope</p>
                <p class="text-muted mt-1 text-sm">
                  Tell us your space and goals. We confirm details and provide a clear quote before
                  service.
                </p>
              </div>
            </li>
            <li class="relative">
              <div
                class="absolute -left-3 top-4 flex h-7 w-7 items-center justify-center rounded-full bg-brand-600 text-xs font-semibold text-white"
                aria-hidden="true"
              >
                2
              </div>
              <div class="panel border-app overflow-hidden border p-5">
                <p class="text-strong text-sm font-semibold">Checklist cleaning</p>
                <p class="text-muted mt-1 text-sm">
                  We use a consistent checklist so the important details don’t get missed.
                </p>
              </div>
            </li>
            <li class="relative">
              <div
                class="absolute -left-3 top-4 flex h-7 w-7 items-center justify-center rounded-full bg-brand-600 text-xs font-semibold text-white"
                aria-hidden="true"
              >
                3
              </div>
              <div class="panel border-app overflow-hidden border p-5">
                <p class="text-strong text-sm font-semibold">Follow-up</p>
                <p class="text-muted mt-1 text-sm">
                  If anything needs attention, let us know within 24 hours and we’ll make it right.
                </p>
              </div>
            </li>
          </ol>
        </div>

        <div id="expect" class="scroll-mt-24">
          <h2 class="heading-2">What you can expect</h2>
          <p class="text-muted mt-3 max-w-prose leading-relaxed sm:text-lg">
            Professional, predictable, and easy—from booking to completion.
          </p>

          <div class="mt-6 grid gap-5">
            <div class="panel panel-muted border-app overflow-hidden border p-6">
              <p class="text-strong text-sm font-semibold">Respect for your space</p>
              <p class="text-muted mt-1 text-sm">
                Careful handling, tidy workflow, and a team that treats your space like it’s ours.
              </p>
            </div>
            <div class="panel panel-muted border-app overflow-hidden border p-6">
              <p class="text-strong text-sm font-semibold">Clear communication</p>
              <p class="text-muted mt-1 text-sm">
                Upfront quotes, confirmed scope, and a simple way to request add-ons.
              </p>
            </div>
            <div class="panel panel-muted border-app overflow-hidden border p-6">
              <p class="text-strong text-sm font-semibold">Consistency</p>
              <p class="text-muted mt-1 text-sm">
                A checklist-driven approach for repeatable results—especially for recurring visits.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <AreasServed />

  <Gallery
    id="gallery"
    heading="Work gallery"
    description="Examples of the spaces we support—from restrooms and breakrooms to conference rooms and supply areas."
  />

  <section id="quote" class="section section-muted section-creative scroll-mt-24">
    <div class="container-page">
      <div class="panel panel-muted border-app overflow-hidden border p-7 sm:p-8">
        <h2 class="heading-2">Ready to get a quote?</h2>
        <p class="lede">
          Send a quick message and we’ll respond with availability and a clear price.
        </p>
        <div class="mt-6">
          <a class="btn-primary" href={`${import.meta.env.BASE_URL}contact/`}>Contact us</a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
