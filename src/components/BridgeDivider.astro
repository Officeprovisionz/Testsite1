---
type Props = {
  class?: string;
};

const { class: className } = Astro.props;
---

<div class:list={['pointer-events-none py-8 md:py-10 lg:py-12', className]} aria-hidden="true">
  <div class="container-page">
    <div class="text-brand/40 dark:text-brand/30">
      <svg
        width="100%"
        height="70"
        viewBox="0 0 1000 70"
        preserveAspectRatio="none"
        role="presentation"
        class="opacity-95"
      >
        <!-- Main suspension cables (double arc) -->
        <path
          d="M0 12 Q 500 68 1000 12"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
          stroke-linecap="round"
          class="text-brand/60"></path>

        <!-- Secondary cable for depth -->
        <path
          d="M0 17 Q 500 73 1000 17"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          class="text-brand/40"></path>

        <!-- Vertical hangers (dense and varying) -->
        <g stroke="currentColor" stroke-width="0.6" class="text-brand/30">
          {
            Array.from({ length: 50 }).map((_, i) => {
              const x = 20 + i * 19.6;
              const yCurve = 12 + 56 * Math.pow((x - 500) / 500, 2);
              return <line x1={x} y1={yCurve} x2={x} y2={68} />;
            })
          }
        </g>

        <!-- Road deck -->
        <line
          x1="0"
          y1="66"
          x2="1000"
          y2="66"
          stroke="currentColor"
          stroke-width="2.5"
          class="text-brand/20"></line>
      </svg>
    </div>
  </div>
</div>
