# Local dev defaults work without this file.
# Copy to .env to override.

# Base path for deploying under a subpath (e.g., GitHub Pages).
# Local dev: /
# GitHub Pages: /<repo>/
PUBLIC_SITE_BASE=/

# Full canonical site URL INCLUDING the base.
# Example (GitHub Pages): https://<owner>.github.io/<repo>/
SITE_URL=

# Static form endpoint (Formspree/Basin/etc.).
# Example (Formspree): https://formspree.io/f/xxxxxxxx
PUBLIC_FORM_ENDPOINT=

# Used by the gallery fetch script (scripts/fetch-gallery.mjs)
# Get a key from https://www.pexels.com/api/
PEXELS_API_KEY=

# Optional: enable the homepage hero background video.
# Requires these files to exist:
# - public/media/hero-cleaning.webm
# - public/media/hero-cleaning.mp4
PUBLIC_ENABLE_HERO_VIDEO=false
