---
import { siteConfig } from '@/data/siteConfig';
---

<section id="areas" class="section scroll-mt-20">
  <div class="container-page">
    <h2 class="text-3xl font-extrabold tracking-tight text-slate-900">
      {siteConfig.areasServed.title}
    </h2>
    <p class="mt-2 max-w-prose text-slate-700">
      Not seeing your neighborhood? Send us your address—we’ll confirm availability.
    </p>

    <div class="card mt-8 p-6">
      <ul class="grid gap-2 text-sm text-slate-700 sm:grid-cols-2 lg:grid-cols-3">
        {
          siteConfig.areasServed.items.map((a) => (
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-brand-600" aria-hidden="true" />
              <span>{a}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
