---
import CTASection from '@/components/CTASection.astro';

type Props = {
  heading?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  variant?: 'default' | 'accent';
};

const { heading, description, ctaText, ctaHref, variant = 'default' } = Astro.props;
---

<CTASection
  layout="centered"
  background={variant}
  heading={heading}
  description={description}
  ctaText={ctaText}
  ctaHref={ctaHref}
/>
