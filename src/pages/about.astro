---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { ProcessStepsPro } from '@/components/ProcessStepsPro';
import TrustBar from '@/components/TrustBar.astro';
import AreasServed from '@/components/AreasServed.astro';
import Gallery from '@/components/Gallery.astro';
import SectionNav from '@/components/SectionNav.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `About | ${siteConfig.brand.name}`;
const description =
  'Commercial-grade cleaning focused on clear communication, consistent checklists, and respectful service.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="A cleaner workspace, a simpler workday"
    description="We’re built for reliability: clear communication, consistent checklists, and a team that respects your space."
  />

  <TrustBar />

  <SectionNav
    items={[
      { id: 'how-we-work', label: 'How' },
      { id: 'expect', label: 'Expect' },
      { id: 'gallery', label: 'Results' },
      { id: 'quote', label: 'Quote' },
    ]}
    ariaLabel="About sections"
  />

  <section class="section pb-0" id="how-we-work">
    <div class="container-page">
      <div class="mb-12 text-center">
        <h2 class="heading-2">How we work</h2>
        <p class="text-muted mx-auto mt-4 max-w-2xl text-lg">
          Great cleaning is a process. We confirm scope, follow a checklist, and keep you in the
          loop—so you always know what to expect.
        </p>
      </div>

      <ProcessStepsPro client:visible />
    </div>
  </section>

  <section class="section" id="expect">
    <div class="container-page">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <h2 class="heading-2">What to expect</h2>
          <p class="text-muted mt-4 text-lg">
            We don't just clean; we communicate. From the first quote to the daily checklist,
            everything is designed to be clear and consistent.
          </p>
          <ul class="mt-8 space-y-4">
            <li class="flex items-start gap-3">
              <span
                class="flex h-6 w-6 items-center justify-center rounded-full bg-brand-100 text-brand-600 dark:bg-brand-900/30 dark:text-brand-400"
                >✓</span
              >
              <span class="text-slate-700 dark:text-slate-300"
                >Consistent crews who know your space</span
              >
            </li>
            <li class="flex items-start gap-3">
              <span
                class="flex h-6 w-6 items-center justify-center rounded-full bg-brand-100 text-brand-600 dark:bg-brand-900/30 dark:text-brand-400"
                >✓</span
              >
              <span class="text-slate-700 dark:text-slate-300"
                >Real-time reporting and issue flagging</span
              >
            </li>
            <li class="flex items-start gap-3">
              <span
                class="flex h-6 w-6 items-center justify-center rounded-full bg-brand-100 text-brand-600 dark:bg-brand-900/30 dark:text-brand-400"
                >✓</span
              >
              <span class="text-slate-700 dark:text-slate-300"
                >Flexible scheduling to fit your operations</span
              >
            </li>
          </ul>
        </div>
        <div
          class="relative aspect-video overflow-hidden rounded-2xl border border-slate-200 bg-slate-100 dark:border-slate-700 dark:bg-slate-800"
        >
          <div class="absolute inset-0 bg-gradient-to-br from-brand-500/10 to-transparent"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <p class="text-4xl font-bold text-brand-900/20">Expect Excellence</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <AreasServed />

  <Gallery
    id="gallery"
    heading="Work gallery"
    description="Examples of the spaces we support—from restrooms and breakrooms to conference rooms and supply areas."
    showTip={false}
    ctaHref={`${import.meta.env.BASE_URL}results/`}
    ctaLabel="View all results"
  />

  <section id="quote" class="section section-muted scroll-mt-24">
    <div class="container-page">
      <div
        class="relative overflow-hidden rounded-3xl bg-brand-900 px-6 py-16 shadow-2xl sm:px-16 md:pt-24 lg:flex lg:gap-x-20 lg:px-24 lg:pt-0"
      >
        <div class="mx-auto max-w-md text-center lg:mx-0 lg:flex-auto lg:py-32 lg:text-left">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
            Ready to get a quote?
          </h2>
          <p class="mt-6 text-lg leading-8 text-brand-100">
            Send a quick message and we’ll respond with availability and a clear price.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6 lg:justify-start">
            <a
              href={`${import.meta.env.BASE_URL}contact/`}
              class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-brand-900 shadow-sm hover:bg-brand-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
            >
              Contact us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
