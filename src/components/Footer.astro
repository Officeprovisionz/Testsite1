---
import { siteConfig } from '@/data/siteConfig';
import { makeHref } from '@/lib/nav';
import { makeMailtoHref, makeTelHref } from '@/lib/links';

const href = makeHref(import.meta.env.BASE_URL);
const telHref = makeTelHref(siteConfig.contact.phoneE164);
const mailtoHref = makeMailtoHref(siteConfig.contact.email);

const base = import.meta.env.BASE_URL;
const logoOrbSrc = `${base}brand/logo-orb.svg`;
---

<footer
  class="footer-surface from-white/88 to-brand/5 dark:to-brand/10 bg-gradient-to-b via-white/75 dark:from-surface/85 dark:via-surface/75"
>
  <div class="container-page safe-bottom-pad pb-20 pt-10 md:py-12 lg:py-16">
    <div class="grid gap-8 md:grid-cols-4 md:gap-9 lg:gap-12">
      <!-- Brand Column -->
      <div class="md:col-span-1">
        <a
          href={href('')}
          class="inline-flex items-center gap-3"
          aria-label={`${siteConfig.brand.name} home`}
        >
          <img
            src={logoOrbSrc}
            alt=""
            width="28"
            height="28"
            loading="lazy"
            decoding="async"
            class="h-7 w-7"
          />
          <span class="text-strong text-lg font-bold tracking-tight">{siteConfig.brand.name}</span>
        </a>
        <p class="mt-2 text-sm leading-relaxed text-muted">{siteConfig.brand.tagline}</p>
        <p class="text-subtle mt-3 text-sm">Serving {siteConfig.brand.city}</p>

        <div class="mt-4 space-y-1">
          <a
            class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 flex items-center gap-2 rounded-lg px-2 py-2.5 text-sm text-muted transition-all duration-200 hover:shadow-sm dark:hover:bg-surface-muted/60 dark:active:bg-surface-muted/75"
            href={telHref}
            data-track="cta_click"
            data-location="footer"
            data-action="call"
            data-label="footer_call"
          >
            <svg
              class="h-4 w-4"
              aria-hidden="true"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            {siteConfig.contact.phoneDisplay}
          </a>
          <a
            class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 flex items-center gap-2 rounded-lg px-2 py-2.5 text-sm text-muted transition-all duration-200 hover:shadow-sm dark:hover:bg-surface-muted/60 dark:active:bg-surface-muted/75"
            href={mailtoHref}
            data-track="cta_click"
            data-location="footer"
            data-action="email"
            data-label="footer_email"
          >
            <svg
              class="h-4 w-4"
              aria-hidden="true"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            {siteConfig.contact.email}
          </a>
        </div>
      </div>

      <!-- Mobile: collapsible link groups -->
      <div class="md:hidden">
        <div class="mt-2 grid gap-3">
          <details
            class="border-brand/10 open:border-brand/20 dark:border-brand/20 dark:open:border-brand/30 rounded-2xl border bg-surface/75 p-4 shadow-sm backdrop-blur-sm transition-all duration-200 open:bg-surface/85 open:shadow-md"
          >
            <summary
              class="text-strong hover:text-brand dark:hover:text-brand flex min-h-11 cursor-pointer touch-manipulation list-none items-center justify-between gap-3 rounded-lg py-1.5 text-sm font-semibold transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[rgb(var(--color-brand)/0.5)] focus-visible:ring-offset-2 focus-visible:ring-offset-[rgb(var(--color-bg))]"
            >
              Services
              <span
                class="text-brand dark:text-brand text-lg transition-transform group-open:rotate-45"
                >+</span
              >
            </summary>
            <nav class="mt-3 grid gap-1" aria-label="Footer Services">
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('services/')}>Overview</a
              >
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('services/#specialty')}>Specialty + add-ons</a
              >
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('pricing/')}>Scope & Pricing</a
              >
            </nav>
          </details>

          <details
            class="border-brand/10 open:border-brand/20 dark:border-brand/20 dark:open:border-brand/30 rounded-2xl border bg-surface/75 p-4 shadow-sm backdrop-blur-sm transition-all duration-200 open:bg-surface/85 open:shadow-md"
          >
            <summary
              class="text-strong hover:text-brand dark:hover:text-brand flex min-h-11 cursor-pointer touch-manipulation list-none items-center justify-between gap-3 rounded-lg py-1.5 text-sm font-semibold transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[rgb(var(--color-brand)/0.5)] focus-visible:ring-offset-2 focus-visible:ring-offset-[rgb(var(--color-bg))]"
            >
              Company
              <span
                class="text-brand dark:text-brand text-lg transition-transform group-open:rotate-45"
                >+</span
              >
            </summary>
            <nav class="mt-3 grid gap-1" aria-label="Footer Company">
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('about/')}>About</a
              >
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('industries/')}>Industries</a
              >
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('resources/')}>Resources</a
              >
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('checklist/')}>Checklist</a
              >
              <a
                class="hover:bg-brand/5 hover:text-brand active:bg-brand/10 dark:hover:text-brand -mx-2 rounded-lg px-2 py-2 text-sm text-muted transition-all duration-200 dark:hover:bg-surface-muted/30"
                href={href('contact/')}>Contact</a
              >
            </nav>
          </details>

          <details
            class="border-brand/10 open:border-brand/20 dark:border-brand/20 dark:open:border-brand/30 rounded-2xl border bg-surface/75 p-4 shadow-sm backdrop-blur-sm transition-all duration-200 open:bg-surface/85 open:shadow-md"
          >
            <summary
              class="text-strong hover:text-brand dark:hover:text-brand flex min-h-11 cursor-pointer touch-manipulation list-none items-center justify-between gap-3 rounded-lg py-1.5 text-sm font-semibold transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[rgb(var(--color-brand)/0.5)] focus-visible:ring-offset-2 focus-visible:ring-offset-[rgb(var(--color-bg))]"
            >
              Hours
              <span
                class="text-brand dark:text-brand text-lg transition-transform group-open:rotate-45"
                >+</span
              >
            </summary>
            <ul class="mt-3 space-y-1.5 text-sm text-muted">
              {siteConfig.hours.lines.map((h) => <li>{h}</li>)}
            </ul>

            <a
              href="#top"
              class="border-brand/20 text-brand hover:border-brand/40 dark:border-brand/20 dark:text-brand dark:hover:border-brand/40 mt-4 inline-flex w-full items-center justify-center gap-2 rounded-full border bg-surface/80 px-4 py-2.5 text-sm font-medium shadow-sm backdrop-blur-sm transition-all duration-300 hover:-translate-y-0.5 hover:bg-surface hover:shadow-md active:translate-y-0 dark:bg-surface-muted/50 dark:hover:bg-surface-muted/80"
            >
              <svg
                class="h-4 w-4"
                aria-hidden="true"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18"
                ></path>
              </svg>
              Back to top
            </a>
          </details>
        </div>
      </div>

      <!-- Services Column -->
      <nav class="hidden space-y-3 md:block" aria-label="Footer Services">
        <p class="text-brand dark:text-brand text-xs font-semibold uppercase tracking-wider">
          Services
        </p>
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('services/')}>Overview</a
        >
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('services/#specialty')}>Specialty + add-ons</a
        >
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('pricing/')}>Scope & Pricing</a
        >
      </nav>

      <!-- Company Column -->
      <nav class="hidden space-y-3 md:block" aria-label="Footer Company">
        <p class="text-brand dark:text-brand text-xs font-semibold uppercase tracking-wider">
          Company
        </p>
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('about/')}>About</a
        >
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('industries/')}>Industries</a
        >
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('resources/')}>Resources</a
        >
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('checklist/')}>Checklist</a
        >
        <a
          class="hover:text-brand dark:hover:text-brand block text-sm text-muted transition-all duration-200 hover:translate-x-1"
          href={href('contact/')}>Contact</a
        >
      </nav>

      <!-- Hours Column -->
      <div class="hidden md:block">
        <p class="text-brand dark:text-brand text-xs font-semibold uppercase tracking-wider">
          Hours
        </p>
        <ul class="mt-3 space-y-1.5 text-sm text-muted">
          {siteConfig.hours.lines.map((h) => <li>{h}</li>)}
        </ul>

        <a
          href="#top"
          class="border-brand/20 text-brand hover:border-brand/40 dark:border-brand/20 dark:text-brand dark:hover:border-brand/40 mt-6 inline-flex items-center gap-2 rounded-full border bg-surface/80 px-4 py-2 text-sm font-medium shadow-sm backdrop-blur-sm transition-all duration-300 hover:-translate-y-0.5 hover:bg-surface hover:shadow-md active:translate-y-0 dark:bg-surface-muted/50 dark:hover:bg-surface-muted/80"
        >
          <svg
            class="h-4 w-4"
            aria-hidden="true"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18"
            ></path>
          </svg>
          Back to top
        </a>
      </div>
    </div>

    <div
      class="border-brand/20 dark:border-brand/20 mt-8 flex flex-col gap-3 border-t pt-5 sm:mt-9 sm:flex-row sm:items-center sm:justify-between sm:gap-4 sm:pt-6"
    >
      <p class="text-subtle text-xs">
        © {new Date().getFullYear()}
        {siteConfig.brand.name}. All rights reserved.
      </p>
      <p class="text-subtle text-xs">Bay Area • 37.77°N • 122.42°W</p>
      <p class="text-subtle text-xs">Checklist-driven service. Clear scope. Consistent results.</p>
    </div>
  </div>
</footer>
