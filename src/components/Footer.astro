---
import { siteConfig } from '@/data/siteConfig';

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
const telHref = `tel:${siteConfig.contact.phoneE164}`;
---

<footer class="footer-surface border-app border-t">
  <div class="container-page py-12">
    <div class="grid gap-10 md:grid-cols-3">
      <div>
        <p class="text-strong font-serif text-lg font-bold tracking-tight">
          {siteConfig.brand.name}
        </p>
        <p class="text-muted mt-2 max-w-prose text-sm">{siteConfig.brand.tagline}</p>
        <p class="text-subtle mt-3 text-sm">Serving {siteConfig.brand.city}</p>

        <div class="mt-5 grid gap-1 text-sm">
          <a class="link link-muted" href={telHref}>Call/Text {siteConfig.contact.phoneDisplay}</a>
          <a class="link link-muted" href={`mailto:${siteConfig.contact.email}`}
            >{siteConfig.contact.email}</a
          >
        </div>
      </div>

      <nav class="grid gap-2 text-sm" aria-label="Footer">
        <p class="text-strong text-xs font-semibold">Services</p>
        <a class="link link-muted" href={href('services/')}>Overview</a>
        <a class="link link-muted" href={href('services/#specialty')}>Specialty + add-ons</a>

        <p class="text-strong mt-4 text-xs font-semibold">Industries</p>
        <a class="link link-muted" href={href('industries/')}>Who we serve</a>

        <p class="text-strong mt-4 text-xs font-semibold">Resources</p>
        <a class="link link-muted" href={href('checklist/')}>Checklist</a>
        <a class="link link-muted" href={href('pricing/')}>Scope</a>

        <p class="text-strong mt-4 text-xs font-semibold">Company</p>
        <a class="link link-muted" href={href('about/')}>About</a>
        <a class="link link-muted" href={href('about/#proof')}>Proof</a>
      </nav>

      <div class="text-sm md:justify-self-end">
        <p class="text-strong font-semibold">Hours</p>
        <ul class="text-muted mt-2 grid gap-1">
          {siteConfig.hours.lines.map((h) => <li>{h}</li>)}
        </ul>

        <div class="mt-6 flex flex-col gap-3">
          <a class="btn-secondary" href="#top">Back to top</a>
        </div>
      </div>
    </div>

    <div
      class="border-app mt-10 flex flex-col gap-2 border-t pt-6 sm:flex-row sm:items-center sm:justify-between"
    >
      <p class="text-subtle text-xs">
        Â© {new Date().getFullYear()}
        {siteConfig.brand.name}. All rights reserved.
      </p>
      <p class="text-subtle text-xs">Checklist-driven service. Clear scope. Consistent results.</p>
    </div>
  </div>
</footer>
