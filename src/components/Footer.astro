---
import { siteConfig } from '@/data/siteConfig';

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
const telHref = `tel:${siteConfig.contact.phoneE164}`;
---

<footer class="surface border-app border-t">
  <div class="container-page py-10">
    <div class="grid gap-6 md:grid-cols-2 md:items-start">
      <div>
        <p class="text-strong font-serif text-lg font-bold tracking-tight">
          {siteConfig.brand.name}
        </p>
        <p class="text-muted mt-2 max-w-prose text-sm">{siteConfig.brand.tagline}</p>

        <div class="mt-4 grid gap-1 text-sm">
          <a class="link link-muted" href={telHref}>
            Call/Text {siteConfig.contact.phoneDisplay}
          </a>
          <a class="link link-muted" href={`mailto:${siteConfig.contact.email}`}>
            {siteConfig.contact.email}
          </a>
        </div>
      </div>
      <div class="grid gap-2 text-sm md:justify-items-end">
        <a class="link link-muted" href={href('services/')}>Services</a>
        <a class="link link-muted" href={href('industries/')}>Industries</a>
        <a class="link link-muted" href={href('pricing/')}>Pricing</a>
        <a class="link link-muted" href={href('results/')}>Results</a>
        <a class="link link-muted" href={href('services/#faq')}>FAQ</a>
        <a class="link link-muted" href={href('contact/')}>Contact</a>
      </div>
    </div>
    <p class="text-subtle mt-8 text-xs">
      Â© {new Date().getFullYear()}
      {siteConfig.brand.name}. All rights reserved.
    </p>
  </div>
</footer>
