---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { PricingPro } from '@/components/PricingPro';
import ScopeSection from '@/components/Scope.astro';
import FAQ from '@/components/FAQ.astro';
import ConversionStrip from '@/components/ConversionStrip.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Scope & process | ${siteConfig.brand.name}`;
const description =
  'How service scope works: walkthrough, checklist, access, frequency, and add-ons. Get a clear scope and a written quote before service.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Scope & process"
    description="We confirm what’s included before service. Share your space and schedule and we’ll send a clear written quote."
  />

  <section class="section pb-0">
    <div class="container-page">
      <div class="mb-12 text-center">
        <h2 class="heading-2">How scope works</h2>
        <p class="text-muted mx-auto mt-4 max-w-2xl text-lg">
          Scope depends on your space and service frequency. We confirm what’s included first—then
          send a clear, written quote.
        </p>
      </div>

      <PricingPro client:visible />
    </div>
  </section>

  <ScopeSection id="scope" heading="Service levels" ctaLabel="Request a walkthrough" />

  <FAQ />

  <ConversionStrip
    tone="muted"
    eyebrow="Options"
    heading="Prefer a quick walkthrough?"
    description="We’ll confirm scope, access, frequency, and add-ons—then send a clear written quote."
  />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
