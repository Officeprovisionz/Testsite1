---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import StickyCTA from '@/components/StickyCTA.astro';
import { PageHeroPro } from '@/components/PageHeroPro';
import { ServicesPro } from '@/components/ServicesPro';
import ServicesSection from '@/components/Services.astro';
import AreasServed from '@/components/AreasServed.astro';
import FAQ from '@/components/FAQ.astro';
import TrustBar from '@/components/TrustBar.astro';
import ConversionStrip from '@/components/ConversionStrip.astro';
import { siteConfig } from '@/data/siteConfig';

const title = `Services | ${siteConfig.brand.name}`;
const description =
  'Office cleaning, janitorial services, supplies/restocking, and facilities support—built for busy teams in San Francisco.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <PageHeroPro
    client:load
    title="Services"
    description="From recurring janitorial to restocking and facilities support—scoped clearly and delivered consistently. We confirm scope before the job."
  />

  <TrustBar />

  <ServicesPro client:visible />

  <ServicesSection
    id="specialty"
    heading="Specialty + add-on services"
    description="Popular add-ons we can scope and schedule based on your space and building requirements."
    items={siteConfig.specialtyServices}
    ctaLabel="Request a walkthrough"
  />

  <AreasServed />

  <FAQ showWave={false} />

  <ConversionStrip
    tone="muted"
    heading="Want a cleaner, easier operation?"
    description="Request a walkthrough, call/text, or preview our checklist. We’ll confirm scope and send a clear written quote."
  />

  <Footer slot="footer" />
  <StickyCTA slot="sticky" />
</BaseLayout>
