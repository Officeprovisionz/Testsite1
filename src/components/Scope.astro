---
import { siteConfig } from '@/data/siteConfig';
import WaveDivider from '@/components/WaveDivider.astro';

type Props = {
  id?: string | undefined;
  heading?: string;
  description?: string | undefined;
  ctaHref?: string | undefined;
  ctaLabel?: string;
};

const {
  id,
  heading = 'Scope & service levels',
  description = siteConfig.scope.note,
  ctaHref,
  ctaLabel = 'Request a walkthrough',
} = Astro.props as Props;

const base = import.meta.env.BASE_URL;
const href = (path: string) => `${base}${path.replace(/^\/+/, '')}`;
const cta = ctaHref ?? href('contact/');

const levels = siteConfig.scope.levels;
const featuredIndex = levels.length >= 3 ? 1 : 0;
---

<section id={id} class="section section-muted section-creative scroll-mt-20 pb-0">
  <div class="container-page">
    <h2 class="heading-2">{heading}</h2>
    <p class="lede">{description}</p>

    <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center">
      <a class="btn-secondary" href={href('checklist/')}>Preview the checklist</a>
      <a class="btn-primary" href={cta}>{ctaLabel}</a>
    </div>

    <div class="mt-8 grid gap-5 lg:grid-cols-3">
      {
        levels.map((lvl, idx) => (
          <div
            class:list={[
              idx === featuredIndex
                ? 'glass-card overflow-hidden p-7 lg:-translate-y-2'
                : 'glass-panel overflow-hidden p-6',
            ]}
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="text-strong text-lg font-bold">{lvl.name}</h3>
                <p class="text-muted mt-1 text-sm">Best for: {lvl.bestFor}</p>
              </div>
              <span class="pill" aria-label="Checklist-driven">
                Checklist
              </span>
            </div>

            <ul class="text-muted mt-4 grid gap-2 text-sm">
              {lvl.includes.map((i) => (
                <li class="flex gap-2">
                  <span
                    class="mt-1 h-2 w-2 flex-none rounded-full bg-brand-600"
                    aria-hidden="true"
                  />
                  <span>{i}</span>
                </li>
              ))}
            </ul>

            {lvl.note && <p class="text-subtle mt-4 text-xs">{lvl.note}</p>}
          </div>
        ))
      }
    </div>
  </div>

  <div class="relative -mb-px mt-12">
    <WaveDivider tone="bg" class="absolute bottom-0 left-0 right-0" />
  </div>
</section>
